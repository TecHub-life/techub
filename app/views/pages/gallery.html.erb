<section class="mx-auto max-w-6xl space-y-6 px-4 py-12">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-slate-900 dark:text-slate-100">Public AI Artwork</h1>
    <a href="/directory" class="text-sm text-blue-600 dark:text-blue-400">Back to Directory</a>
  </div>
  <p class="text-slate-600 dark:text-slate-300">Profiles who opted in to share their AI artwork.</p>

  <% if @items.any? %>
    <div class="grid gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      <% @items.each do |it| %>
        <div class="rounded-lg border border-slate-200 bg-white p-2 shadow-sm dark:border-slate-700 dark:bg-slate-800">
          <img src="<%= it[:url] %>" alt="<%= it[:kind] %> for @<%= it[:login] %>" class="h-40 w-full object-cover rounded">
          <div class="mt-2 flex items-center justify-between text-xs">
            <a href="<%= profile_path(username: it[:login]) %>" class="text-blue-600 dark:text-blue-400">@<%= it[:login] %></a>
            <span class="text-slate-500"><%= it[:kind] %></span>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-slate-600 dark:text-slate-300">No public AI artwork yet.</p>
  <% end %>
</section>


