<section class="mx-auto max-w-6xl grid grid-cols-1 gap-6 px-4 py-12 md:grid-cols-[260px_1fr]">
  <aside class="rounded-lg border border-slate-200 bg-white p-3 dark:border-slate-700 dark:bg-slate-800">
    <h2 class="mb-2 text-sm font-semibold text-slate-900 dark:text-slate-100">Docs</h2>
    <ul class="max-h-[70vh] overflow-auto text-sm">
      <% @docs_index.each do |rel| %>
        <li>
          <a class="block rounded px-2 py-1 text-slate-700 hover:bg-slate-100 dark:text-slate-300 dark:hover:bg-slate-700"
             href="<%= docs_path(path: rel) %>"><%= rel %></a>
        </li>
      <% end %>
    </ul>
  </aside>
  <main>
    <h1 class="mb-4 text-3xl font-bold text-slate-900 dark:text-slate-100">Documentation</h1>
    <% if @doc_html.present? %>
      <article class="prose prose-slate max-w-none dark:prose-invert">
        <%= @doc_html.html_safe %>
      </article>
    <% else %>
      <p class="text-slate-600 dark:text-slate-300">Select a document from the left.</p>
    <% end %>
  </main>
</section>
