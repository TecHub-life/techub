<section class="mx-auto max-w-6xl px-4 py-8">
  <div class="mb-6 rounded-xl border border-slate-200 bg-white p-4 md:p-6 shadow-lg dark:border-slate-700 dark:bg-slate-900" data-controller="tabs" data-tabs-default-value="overview">
    <div class="flex flex-col gap-4">
      <!-- Header -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <h1 class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-sky-600 via-indigo-500 to-cyan-500 bg-clip-text text-transparent dark:from-sky-400 dark:via-indigo-400 dark:to-cyan-400 animate-gradient">Ops Admin</h1>
        
        <!-- Quick Links -->
        <div class="flex flex-wrap gap-2">
          <a href="<%= ops_ownerships_path %>" class="rounded-lg border border-slate-200 bg-slate-50 px-3 py-1.5 text-sm text-slate-700 hover:bg-slate-100 hover:border-slate-300 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700">Users & Ownership</a>
          <a href="/ops/profiles/<%= Profile.order(:login).limit(1).pluck(:login).first %>" class="rounded-lg border border-slate-200 bg-slate-50 px-3 py-1.5 text-sm text-slate-700 hover:bg-slate-100 hover:border-slate-300 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700">Example Profile</a>
          <a href="<%= ops_motifs_path %>" class="rounded-lg border border-slate-200 bg-slate-50 px-3 py-1.5 text-sm text-slate-700 hover:bg-slate-100 hover:border-slate-300 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700">Motifs</a>
        </div>
      </div>

      <!-- Tab Navigation -->
      <div class="sticky top-[60px] z-40 -mx-4 md:-mx-6 border-b border-slate-200 dark:border-slate-700 bg-white/95 backdrop-blur-sm dark:bg-slate-900/95">
        <nav class="flex flex-wrap justify-start gap-2 pb-4 px-2 overflow-x-auto" aria-label="Ops Admin Tabs">
          <button data-tabs-target="tab" data-tab-name="overview" data-action="click->tabs#change" class="flex items-center gap-2 whitespace-nowrap rounded-lg px-4 py-2 text-sm md:text-base font-medium transition border-transparent text-slate-500 hover:bg-slate-100 hover:text-slate-700 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-slate-300 data-[active]:bg-indigo-600 data-[active]:text-white">
            <span>Overview</span>
          </button>
          <button data-tabs-target="tab" data-tab-name="profiles" data-action="click->tabs#change" class="flex items-center gap-2 whitespace-nowrap rounded-lg px-4 py-2 text-sm md:text-base font-medium transition border-transparent text-slate-500 hover:bg-slate-100 hover:text-slate-700 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-slate-300 data-[active]:bg-indigo-600 data-[active]:text-white">
            <span>Profiles</span>
          </button>
          <button data-tabs-target="tab" data-tab-name="ai" data-action="click->tabs#change" class="flex items-center gap-2 whitespace-nowrap rounded-lg px-4 py-2 text-sm md:text-base font-medium transition border-transparent text-slate-500 hover:bg-slate-100 hover:text-slate-700 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-slate-300 data-[active]:bg-indigo-600 data-[active]:text-white">
            <span>AI</span>
          </button>
          <button data-tabs-target="tab" data-tab-name="pipeline" data-action="click->tabs#change" class="flex items-center gap-2 whitespace-nowrap rounded-lg px-4 py-2 text-sm md:text-base font-medium transition border-transparent text-slate-500 hover:bg-slate-100 hover:text-slate-700 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-slate-300 data-[active]:bg-indigo-600 data-[active]:text-white">
            <span>Pipeline</span>
          </button>
          <button data-tabs-target="tab" data-tab-name="access" data-action="click->tabs#change" class="flex items-center gap-2 whitespace-nowrap rounded-lg px-4 py-2 text-sm md:text-base font-medium transition border-transparent text-slate-500 hover:bg-slate-100 hover:text-slate-700 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-slate-300 data-[active]:bg-indigo-600 data-[active]:text-white">
            <span>Access</span>
          </button>
          <button data-tabs-target="tab" data-tab-name="system" data-action="click->tabs#change" class="flex items-center gap-2 whitespace-nowrap rounded-lg px-4 py-2 text-sm md:text-base font-medium transition border-transparent text-slate-500 hover:bg-slate-100 hover:text-slate-700 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-slate-300 data-[active]:bg-indigo-600 data-[active]:text-white">
            <span>System</span>
          </button>
          <button data-tabs-target="tab" data-tab-name="jobs" data-action="click->tabs#change" class="flex items-center gap-2 whitespace-nowrap rounded-lg px-4 py-2 text-sm md:text-base font-medium transition border-transparent text-slate-500 hover:bg-slate-100 hover:text-slate-700 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-slate-300 data-[active]:bg-indigo-600 data-[active]:text-white">
            <span>Jobs</span>
          </button>
        </nav>
      </div>
    </div>

    <!-- Tab Panels -->
    <div class="mt-6 space-y-6">
      <!-- Overview Tab -->
      <div data-tabs-target="panel" data-tab-panel="overview">
        <!-- Regenerate All Callout -->
        <div class="rounded-lg border border-amber-300 bg-amber-50 p-4 shadow-sm dark:border-amber-700 dark:bg-amber-900/20">
          <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            <div>
              <h2 class="text-lg font-semibold text-amber-900 dark:text-amber-200">Re-roll All Profiles</h2>
              <p class="text-sm text-amber-800 dark:text-amber-300">Use after deploying new features or layout updates. This re-runs the profile pipeline for everyone so cards and data match the latest version. The pipeline syncs GitHub data, refreshes traits, and captures screenshots; AI artwork is handled separately. The main Re-roll behaves like a fresh submission.</p>
              <ul class="mt-2 list-disc pl-5 text-xs text-amber-800 dark:text-amber-300">
                <li>Refresh GitHub data and sync the profile</li>
                <li>Rebuild profile info and traits (AI text if enabled; heuristic fallback otherwise)</li>
                <li>Capture card screenshots (OG, card, simple, banner) and queue social variants</li>
                <li>Record/optimize assets for use across the site</li>
              </ul>
            </div>
            <div class="flex flex-wrap gap-2">
              <form action="<%= ops_bulk_retry_all_path %>" method="post" onsubmit="return confirm('Apply latest version for ALL profiles?');">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                <button class="rounded bg-slate-900 px-4 py-2 text-white dark:bg-slate-100 dark:text-slate-900">Re-roll All</button>
              </form>
            </div>
          </div>
        </div>

        <!-- Profile Status Summary -->
        <div class="rounded border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-700 dark:bg-slate-800">
          <h2 class="text-lg font-semibold mb-3 flex items-center gap-2">
            Profile Status
            <span class="inline-flex items-center" title="Partial = succeeded via fallback (e.g., AI traits or images fell back to heuristics/screenshots). Failure = last pipeline run failed at some stage. Queued = run enqueued.">
              <svg class="h-4 w-4 text-slate-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M18 10A8 8 0 112 10a8 8 0 0116 0zM9 8a1 1 0 112 0v5a1 1 0 11-2 0V8zm1-4a1.5 1.5 0 100 3 1.5 1.5 0 000-3z"/>
              </svg>
            </span>
          </h2>
          <div class="grid grid-cols-2 gap-3 sm:grid-cols-5">
            <div class="rounded border border-slate-200 p-3 text-center dark:border-slate-700">
              <div class="text-xs uppercase tracking-wide text-emerald-600 dark:text-emerald-400">Success</div>
              <div class="text-xl font-bold text-slate-900 dark:text-slate-100"><%= @status_counts[:success] %></div>
            </div>
            <div class="rounded border border-slate-200 p-3 text-center dark:border-slate-700">
              <div class="text-xs uppercase tracking-wide text-amber-600 dark:text-amber-400">Partial</div>
              <div class="text-xl font-bold text-slate-900 dark:text-slate-100"><%= @status_counts[:partial_success] %></div>
            </div>
            <div class="rounded border border-slate-200 p-3 text-center dark:border-slate-700">
              <div class="text-xs uppercase tracking-wide text-red-600 dark:text-red-400">Failure</div>
              <div class="text-xl font-bold text-slate-900 dark:text-slate-100"><%= @status_counts[:failure] %></div>
            </div>
            <div class="rounded border border-slate-200 p-3 text-center dark:border-slate-700">
              <div class="text-xs uppercase tracking-wide text-indigo-600 dark:text-indigo-400">Queued</div>
              <div class="text-xl font-bold text-slate-900 dark:text-slate-100"><%= @status_counts[:queued] %></div>
            </div>
            <div class="rounded border border-slate-200 p-3 text-center dark:border-slate-700">
              <div class="text-xs uppercase tracking-wide text-slate-500 dark:text-slate-400">Unknown</div>
              <div class="text-xl font-bold text-slate-900 dark:text-slate-100"><%= @status_counts[:unknown] %></div>
            </div>
          </div>
          <p class="mt-3 text-xs text-slate-600 dark:text-slate-400">Status reflects the last pipeline run per profile.</p>
        </div>
      </div>

      <!-- Profiles Tab -->
      <div data-tabs-target="panel" data-tab-panel="profiles" class="hidden space-y-6">
        <!-- Recent Successful Profiles -->
        <div class="rounded border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-700 dark:bg-slate-800">
          <h2 class="text-lg font-semibold mb-3">Recent Successful Profiles</h2>
          <% if @recent_success_profiles.present? %>
            <div class="overflow-x-auto">
              <table class="min-w-full text-sm">
                <thead>
                  <tr class="text-left text-slate-500 dark:text-slate-400 border-b border-slate-200 dark:border-slate-700">
                    <th class="py-2 pr-4">Profile</th>
                    <th class="py-2 pr-4">Status</th>
                    <th class="py-2 pr-4">Last Synced</th>
                    <th class="py-2 pr-4">Last AI Regen</th>
                    <th class="py-2">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @recent_success_profiles.each do |p| %>
                    <tr class="border-b border-slate-100 dark:border-slate-800 align-top">
                      <td class="py-2 pr-4">
                        <a href="<%= profile_path(username: p.login) %>" class="text-blue-600 dark:text-blue-400">@<%= p.login %></a>
                        <span class="text-slate-400">·</span>
                        <a href="<%= ops_profile_admin_path(username: p.login) %>" class="text-slate-600 underline dark:text-slate-300">Ops</a>
                      </td>
                      <td class="py-2 pr-4">
                        <% status = p.last_pipeline_status %>
                        <% cls = case status
                                 when 'success' then 'bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-300'
                                 when 'partial_success' then 'bg-amber-100 text-amber-800 dark:bg-amber-900/30 dark:text-amber-300'
                                 else 'bg-slate-100 text-slate-700 dark:bg-slate-800 dark:text-slate-300'
                               end %>
                        <% tip = case status
                                 when 'success' then 'Full success'
                                 when 'partial_success' then 'Partial: succeeded via fallback (e.g., heuristics/screenshots)'
                                 else nil
                               end %>
                        <span class="rounded px-2 py-0.5 text-xs font-semibold <%= cls %>" <%= "title=\"#{h tip}\"" if tip.present? %>><%= status %></span>
                      </td>
                      <td class="py-2 pr-4"><%= p.last_synced_at&.strftime('%Y-%m-%d %H:%M') || '—' %></td>
                      <td class="py-2 pr-4"><%= p.last_ai_regenerated_at&.strftime('%Y-%m-%d %H:%M') || '—' %></td>
                      <td class="py-2">
                        <div class="flex flex-wrap gap-2">
                          <%= button_to "Re-roll Profile", ops_retry_profile_path(username: p.login), method: :post, class: "rounded bg-slate-900 px-3 py-1 text-white dark:bg-slate-100 dark:text-slate-900" %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-slate-600 dark:text-slate-300">No successful runs recorded yet.</p>
          <% end %>
        </div>

        <!-- Failed Profiles -->
        <div class="rounded border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-700 dark:bg-slate-800">
          <h2 class="text-lg font-semibold mb-1">Failed Profiles</h2>
          <p class="mb-3 text-sm text-slate-600 dark:text-slate-300">Regeneration recaptures screenshots and updates text. AI artwork is managed outside of the pipeline.</p>
          <p class="-mt-2 mb-3 text-xs text-red-700 dark:text-red-400">"Delete profile (permanent)" removes the profile and all related data. This cannot be undone.</p>
          <div class="mb-3 grid gap-3 sm:grid-cols-2">
            <div class="rounded border border-slate-200 p-3 dark:border-slate-700">
              <h3 class="text-sm font-semibold mb-2">Re-roll (Selected)</h3>
              <form action="<%= ops_bulk_retry_path %>" method="post" class="space-y-2">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                <label class="text-xs text-slate-500">Select profiles</label>
                <select name="logins[]" multiple size="8" class="w-full rounded border px-2 py-1 text-sm dark:border-slate-700">
                  <% Profile.order(:login).limit(500).pluck(:login).each do |login| %>
                    <option value="<%= login %>">@<%= login %></option>
                  <% end %>
                </select>
                <button class="w-full rounded bg-slate-900 px-3 py-1 text-white dark:bg-slate-100 dark:text-slate-900">Re-roll</button>
              </form>
            </div>
            <div class="rounded border border-slate-200 p-3 dark:border-slate-700">
              <h3 class="text-sm font-semibold mb-2">Advanced Re-roll (Single Profile)</h3>
              <form action="<%= ops_retry_profile_path(username: '') %>" method="post" onsubmit="this.action=this.action.replace(/\/$/, '') + '/' + encodeURIComponent(this.querySelector('[name=login]').value) + '/retry';">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                <div class="mb-2">
                  <label class="text-xs text-slate-500">GitHub username</label>
                  <input type="text" name="login" class="w-full rounded border px-2 py-1 text-sm dark:border-slate-700" placeholder="loftwah" required>
                </div>
                <p class="text-xs text-slate-500 mb-2">Runs the full pipeline as if freshly submitted. More granular controls coming soon.</p>
                <button class="w-full rounded bg-slate-900 px-3 py-1 text-white dark:bg-slate-100 dark:text-slate-900">Re-roll Full</button>
              </form>
            </div>
          </div>

          <div class="mb-3 flex items-center gap-2">
            <form action="<%= ops_bulk_retry_all_path %>" method="post">
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
              <button class="rounded bg-slate-900 px-3 py-1 text-white dark:bg-slate-100 dark:text-slate-900">Re-roll ALL Profiles</button>
            </form>
          </div>
          <% if @failed_profiles.present? %>
            <div class="overflow-x-auto">
              <table class="min-w-full text-sm">
                <thead>
                  <tr class="text-left text-slate-500 dark:text-slate-400 border-b border-slate-200 dark:border-slate-700">
                    <th class="py-2 pr-4">Profile</th>
                    <th class="py-2 pr-4">Last Error</th>
                    <th class="py-2 pr-4">Updated</th>
                    <th class="py-2">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @failed_profiles.each do |p| %>
                    <tr class="border-b border-slate-100 dark:border-slate-800 align-top">
                      <td class="py-2 pr-4">
                        <a href="<%= profile_path(username: p.login) %>" class="text-blue-600 dark:text-blue-400">@<%= p.login %></a>
                        <span class="text-slate-400">·</span>
                        <a href="<%= ops_profile_admin_path(username: p.login) %>" class="text-slate-600 underline dark:text-slate-300">Ops</a>
                      </td>
                      <td class="py-2 pr-4">
                        <pre class="whitespace-pre-wrap text-xs text-red-600 dark:text-red-400"><%= (p.last_pipeline_error || "(none)").to_s.truncate(160) %></pre>
                        <% if @failed_events_by_profile_id[p.id] %>
                          <% recent = @failed_events_by_profile_id[p.id].select { |e| e.stage.start_with?("screenshot_") }.first(3) %>
                          <% if recent.any? %>
                            <div class="mt-1 text-[11px] text-slate-500 dark:text-slate-400">
                              <% recent.each do |e| %>
                                <div>
                                  <span class="font-mono"><%= e.stage %></span>
                                  <span>—</span>
                                  <span class="uppercase <%= e.status == 'failed' ? 'text-red-600 dark:text-red-400' : 'text-slate-600 dark:text-slate-300' %>"><%= e.status %></span>
                                  <% if e.message.present? %>
                                    <span class="ml-1">(<%= e.message.to_s.truncate(100) %>)</span>
                                  <% end %>
                                </div>
                              <% end %>
                            </div>
                          <% end %>
                        <% end %>
                      </td>
                      <td class="py-2 pr-4"><%= p.updated_at.strftime('%Y-%m-%d %H:%M') %></td>
                      <td class="py-2">
                        <div class="flex gap-2">
                          <%= button_to "Retry — No Images", ops_retry_profile_path(username: p.login), method: :post, class: "rounded bg-slate-900 px-3 py-1 text-white dark:bg-slate-100 dark:text-slate-900" %>
                          <%= button_to "Delete profile (permanent)", ops_destroy_profile_path(username: p.login, back_to: "#failed-profiles"), method: :delete, form: { data: { turbo_confirm: "Delete @#{p.login}? This permanently removes the profile and all related data. This cannot be undone." } }, class: "rounded bg-red-600 px-3 py-1 text-white hover:bg-red-700" %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-slate-600 dark:text-slate-300">No failed profiles found.</p>
          <% end %>
        </div>

        <!-- Data Issues -->
        <div class="rounded border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-700 dark:bg-slate-800">
          <h2 class="text-lg font-semibold mb-3">Data Issues (Successful but incomplete)</h2>
          <% if @data_issues_profiles.present? %>
            <div class="overflow-x-auto">
              <table class="min-w-full text-sm">
                <thead>
                  <tr class="text-left text-slate-500 dark:text-slate-400 border-b border-slate-200 dark:border-slate-700">
                    <th class="py-2 pr-4">Profile</th>
                    <th class="py-2 pr-4">Missing</th>
                    <th class="py-2 pr-4">Last Synced</th>
                    <th class="py-2">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @data_issues_profiles.each do |p| %>
                    <% missing = [] %>
                    <% missing << 'card' unless p.profile_card.present? %>
                    <% missing << 'languages' unless p.profile_languages.exists? %>
                    <% missing << 'repositories' unless p.profile_repositories.exists? %>
                    <tr class="border-b border-slate-100 dark:border-slate-800 align-top">
                      <td class="py-2 pr-4">
                        <a href="<%= profile_path(username: p.login) %>" class="text-blue-600 dark:text-blue-400">@<%= p.login %></a>
                        <span class="text-slate-400">·</span>
                        <a href="<%= ops_profile_admin_path(username: p.login) %>" class="text-slate-600 underline dark:text-slate-300">Ops</a>
                      </td>
                      <td class="py-2 pr-4">
                        <span class="rounded bg-amber-100 px-2 py-0.5 text-amber-800 dark:bg-amber-900/30 dark:text-amber-300"><%= missing.join(', ') %></span>
                      </td>
                      <td class="py-2 pr-4"><%= p.last_synced_at&.strftime('%Y-%m-%d %H:%M') || '—' %></td>
                      <td class="py-2">
                        <div class="flex gap-2">
                          <%= button_to "Retry (no images)", ops_retry_profile_path(username: p.login), method: :post, class: "rounded bg-slate-900 px-3 py-1 text-white dark:bg-slate-100 dark:text-slate-900" %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-slate-600 dark:text-slate-300">No data issues detected.</p>
          <% end %>
        </div>
      </div>

      <!-- AI Tab -->
      <div data-tabs-target="panel" data-tab-panel="ai" class="hidden space-y-6">
        <!-- AI Capabilities -->
        <div class="rounded border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-700 dark:bg-slate-800">
          <h2 class="mb-3 text-lg font-semibold text-slate-900 dark:text-slate-100">AI Capabilities</h2>
          <div class="text-sm text-slate-600 dark:text-slate-300 mb-3">
            Provider: <code><%= @ai_caps[:provider] || 'n/a' %></code>
            <span class="mx-2">·</span>
            Model: <code><%= @ai_caps[:model] || 'n/a' %></code>
          </div>
          <div class="grid gap-2 sm:grid-cols-2 lg:grid-cols-4">
            <% [
              ['Image Generation', :image_generation],
              ['Image Descriptions', :image_descriptions],
              ['Text Output', :text_output],
              ['Structured Output', :structured_output]
            ].each do |label, key| %>
              <% on = @ai_caps[key] %>
              <div class="rounded border border-slate-200 p-3 dark:border-slate-700">
                <div class="flex items-center justify-between">
                  <div class="text-slate-800 dark:text-slate-200 text-sm font-medium"><%= label %></div>
                  <% if on %>
                    <span class="rounded bg-emerald-100 px-2 py-0.5 text-xs font-semibold text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-300">On</span>
                  <% else %>
                    <span class="rounded bg-slate-100 px-2 py-0.5 text-xs font-semibold text-slate-700 dark:bg-slate-800 dark:text-slate-300">Off</span>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <p class="mt-2 text-xs text-slate-500 dark:text-slate-400">Image modules default Off to control costs with Gemini 2.5 Flash. Text/structured modules default On when the model is configured.</p>

          <div class="mt-4">
            <h3 class="text-sm font-semibold text-slate-800 dark:text-slate-200 mb-2">Toggle AI Modules</h3>
            <form action="<%= update_ai_caps_ops_admin_index_path %>" method="post" class="space-y-2">
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
              <label class="inline-flex items-center gap-2 text-sm">
                <input type="checkbox" name="ai_images" value="1" <%= 'checked' if @ai_caps[:image_generation] %> class="h-4 w-4 rounded border-slate-300 text-blue-600 focus:ring-blue-500">
                <span class="text-slate-700 dark:text-slate-300">Enable AI Image Generation</span>
              </label>
              <br>
              <label class="inline-flex items-center gap-2 text-sm">
