<section class="mx-auto max-w-4xl space-y-6 px-4 py-12">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-slate-900 dark:text-slate-100">@<%= @profile.login %></h1>
    <div class="flex gap-2">
      <%= button_to "Retry — Screenshots‑Only", ops_retry_profile_path(username: @profile.login), method: :post, class: "rounded bg-slate-900 px-3 py-1 text-white dark:bg-slate-100 dark:text-slate-900" %>
      <%= button_to "Retry — Full (AI)", ops_retry_profile_ai_path(username: @profile.login), method: :post, class: "rounded bg-indigo-600 px-3 py-1 text-white hover:bg-indigo-700" %>
      <%= button_to "Delete", ops_destroy_profile_path(username: @profile.login), method: :delete, form: { data: { turbo_confirm: "Delete @#{@profile.login}? This cannot be undone." } }, class: "rounded bg-red-600 px-3 py-1 text-white hover:bg-red-700" %>
    </div>
  </div>

  <p class="text-sm text-slate-600 dark:text-slate-400">Run options: <span class="font-medium">Screenshots‑Only</span> runs sync + screenshots (no AI budget). <span class="font-medium">Full (AI)</span> includes AI artwork + traits generation.</p>

  <div class="grid gap-4 sm:grid-cols-3">
    <div class="rounded border p-4 dark:border-slate-700">
      <div class="text-sm text-slate-500">Pipeline Status</div>
      <div class="text-lg font-semibold"><%= @profile.last_pipeline_status || '—' %></div>
      <% if @profile.last_pipeline_error.present? %>
        <pre class="mt-2 whitespace-pre-wrap text-xs text-red-600 dark:text-red-400"><%= @profile.last_pipeline_error %></pre>
      <% end %>
    </div>
    <div class="rounded border p-4 dark:border-slate-700">
      <div class="text-sm text-slate-500">Last Synced</div>
      <div class="text-lg font-semibold"><%= @profile.last_synced_at&.strftime('%Y-%m-%d %H:%M') || '—' %></div>
      <% if @profile.last_sync_error.present? %>
        <div class="mt-2 text-xs text-amber-700 dark:text-amber-300">
          <div class="font-semibold">Last Sync Error</div>
          <pre class="whitespace-pre-wrap"><%= @profile.last_sync_error %></pre>
          <div><%= @profile.last_sync_error_at&.strftime('%Y-%m-%d %H:%M') %></div>
        </div>
      <% end %>
    </div>
    <div class="rounded border p-4 dark:border-slate-700">
      <div class="text-sm text-slate-500">Data Completeness</div>
      <% comp = @profile.data_completeness %>
      <div class="text-sm">
        <div>Required: <%= comp[:required_completeness] %>%</div>
        <div>Optional: <%= comp[:optional_completeness] %>%</div>
        <div>Repos: <%= comp[:has_repositories] ? 'yes' : 'no' %></div>
        <div>Languages: <%= @languages.any? %></div>
        <div>Card: <%= @profile.profile_card.present? %></div>
        <div>Orgs: <%= @organizations.any? %></div>
        <div>Social: <%= @social_accounts.any? %></div>
      </div>
    </div>
  </div>

  <div class="rounded border p-4 dark:border-slate-700">
    <h2 class="text-lg font-semibold mb-3">Recent Pipeline Stages</h2>
    <% if @recent_events.present? %>
      <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead>
            <tr class="text-left text-slate-500 border-b dark:text-slate-400 dark:border-slate-700">
              <th class="py-2 pr-4">Time</th>
              <th class="py-2 pr-4">Stage</th>
              <th class="py-2 pr-4">Status</th>
              <th class="py-2 pr-4">Duration</th>
              <th class="py-2">Message</th>
            </tr>
          </thead>
          <tbody>
            <% @recent_events.each do |e| %>
              <tr class="border-b border-slate-100 dark:border-slate-800">
                <td class="py-2 pr-4"><%= e.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                <td class="py-2 pr-4"><%= e.stage %></td>
                <td class="py-2 pr-4"><%= e.status %></td>
                <td class="py-2 pr-4"><%= e.duration_ms ? "#{e.duration_ms} ms" : '—' %></td>
                <td class="py-2"><%= e.message.to_s.truncate(120) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-slate-600 dark:text-slate-300">No recent events for this profile.</p>
    <% end %>
  </div>

  <div>
    <a href="<%= profile_path(username: @profile.login) %>" class="text-blue-600 underline dark:text-blue-400">View public profile</a>
    <span class="mx-2 text-slate-500">•</span>
    <a href="/ops/jobs" class="text-blue-600 underline dark:text-blue-400">Open Jobs UI</a>
  </div>
</section>
