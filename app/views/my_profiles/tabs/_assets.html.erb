<%# Assets Tab %>
<div class="space-y-6">
  <% card = profile.profile_card %>
  <% asset_card ||= profile.profile_assets.find_by(kind: "card") %>
  <% asset_card_pro ||= profile.profile_assets.find_by(kind: "card_pro") %>
  <% asset_og ||= profile.profile_assets.find_by(kind: "og") %>
  <% asset_og_pro ||= profile.profile_assets.find_by(kind: "og_pro") %>
  <% asset_simple ||= profile.profile_assets.find_by(kind: "simple") %>

  <%# Card Previews Section - Using the same styling as profile show %>
  <div class="rounded-xl border border-slate-200 bg-gradient-to-br from-slate-50 to-slate-100 p-6 shadow-lg dark:border-slate-700 dark:from-slate-900 dark:to-slate-800">
    <div class="mb-4">
      <h2 class="text-xl font-bold text-slate-900 dark:text-slate-100">Card Previews</h2>
      <p class="text-sm text-slate-600 dark:text-slate-400 mt-1">Your generated trading cards and social images</p>
    </div>
    <% variants = profile_card_variants(profile) %>
    <% og_variants = variants.select { |v| v[:og_variant] } %>
    <% has_assets = profile.profile_assets.exists? %>

    <% unless has_assets %>
      <div class="rounded-lg border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 p-4 text-center mb-4">
        <div class="mx-auto mb-2 h-10 w-10 rounded-full bg-slate-200 dark:bg-slate-800 grid place-items-center text-slate-500 text-xl">ðŸŽ´</div>
        <p class="text-sm text-slate-600 dark:text-slate-300">No card assets yet. Generate your profile to create shareable cards.</p>
      </div>
    <% end %>

    <% if og_variants.any? %>
      <% active_label = og_variants.find { |variant| variant[:selected] }&.dig(:label) || og_variants.first[:label] %>
      <div class="mb-6 rounded-2xl border border-slate-200 bg-white/70 p-4 shadow-sm backdrop-blur dark:border-slate-700 dark:bg-slate-900/70">
        <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
          <div>
            <p class="text-sm font-semibold text-slate-900 dark:text-slate-100">Open Graph image used on your TecHub profile</p>
            <p class="text-xs text-slate-500 dark:text-slate-400">Pick the professional or collectible image that should appear when someone shares your profile link.</p>
          </div>
          <p class="text-xs font-semibold uppercase tracking-wide text-emerald-600 dark:text-emerald-300">
            <%= active_label %> active
          </p>
        </div>
        <%= form_with url: update_my_profile_settings_path(username: profile.login), method: :patch, class: "mt-4 grid gap-3 md:grid-cols-2", data: { turbo: false } do %>
          <%= hidden_field_tag :tab, "assets" %>
          <% og_variants.each do |variant| %>
            <% selected = variant[:selected] %>
            <label class="flex cursor-pointer items-center gap-3 rounded-xl border px-3 py-3 text-sm transition hover:border-indigo-400 hover:bg-indigo-50/60 dark:hover:bg-slate-800/60 <%= selected ? "border-indigo-500 bg-indigo-50/60 dark:border-indigo-400/80 dark:bg-indigo-500/10" : "border-slate-200 dark:border-slate-700" %>">
              <input type="radio"
                     name="preferred_og_kind"
                     value="<%= variant[:kind] %>"
                     class="sr-only"
                     <%= "checked" if selected %>
                     onchange="this.form.requestSubmit()">
              <span class="inline-flex h-5 w-5 items-center justify-center rounded-full border text-[11px] font-semibold <%= selected ? "border-indigo-500 text-indigo-600 dark:text-indigo-300" : "border-slate-400 text-slate-500 dark:text-slate-300" %>"><%= selected ? "âœ“" : "" %></span>
              <span class="flex-1">
                <span class="font-semibold text-slate-800 dark:text-slate-100"><%= variant[:label] %></span>
                <span class="ml-2 text-xs text-slate-500 dark:text-slate-400"><%= variant[:usage] %></span>
              </span>
            </label>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <div class="grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      <% variants.each do |v| %>
        <div class="rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden bg-white dark:bg-slate-900 shadow-lg hover:shadow-xl transition">
          <div class="flex items-center justify-between px-4 py-2 text-xs font-medium text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700">
            <div class="flex items-center gap-2 flex-wrap">
              <span><%= v[:label] %></span>
              <span class="text-slate-500">â€¢</span>
              <span class="text-slate-500"><%= v[:dims] %> (<%= v[:aspect] %>)</span>
              <span class="text-slate-500">â€¢</span>
              <span class="text-slate-500"><%= v[:usage] %></span>
              <% if v[:selected] %>
                <span class="inline-flex items-center rounded-full bg-emerald-100 px-2 py-0.5 text-[11px] font-semibold uppercase tracking-wide text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-200">Active OG image</span>
              <% end %>
            </div>
            <% if v[:url].present? %>
              <a href="<%= v[:url] %>" download target="_blank" rel="noopener" class="text-indigo-600 hover:text-indigo-700 dark:text-indigo-400 dark:hover:text-indigo-300 transition">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                </svg>
              </a>
            <% end %>
          </div>
          <% if v[:url].present? %>
            <div class="w-full cursor-pointer" style="aspect-ratio: <%= v[:aspect] %>;" onclick="openAssetLightbox('<%= j v[:url] %>', '<%= j v[:label] %>')">
              <img src="<%= v[:url] %>" alt="<%= v[:label] %>" class="w-full h-full object-contain bg-slate-100 dark:bg-slate-900 rounded-lg border border-slate-200 dark:border-slate-700 hover:opacity-90 transition-opacity">
            </div>
          <% else %>
            <div class="w-full flex flex-col items-center justify-center text-slate-400 bg-slate-100 dark:bg-slate-800 rounded-lg border border-slate-200 dark:border-slate-700" style="aspect-ratio: <%= v[:aspect] %>;">
              <svg class="mb-2 h-12 w-12 motion-safe:animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <p class="text-sm font-medium">Generating...</p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-4 flex flex-wrap gap-2">
      <%= button_to ops_generate_social_assets_path(username: profile.login), method: :post,
            form: { data: { controller: "submit-form", turbo: false } },
            class: "#{ui_secondary_button_class} inline-flex",
            data: { submit_form_target: "button" } do %>
        <span data-submit-form-target="spinner" class="hidden">
          <svg class="h-4 w-4 animate-spin" viewBox="0 0 24 24" fill="none">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V2C5.373 2 1 6.373 1 12h3z"></path>
          </svg>
        </span>
        <span data-submit-form-target="text">Generate social assets</span>
      <% end %>
      <%= button_to regenerate_my_profile_ai_path(username: profile.login), method: :post, params: { tab: "assets" },
            form: { data: { controller: "submit-form" } },
            class: "#{ui_primary_button_class} inline-flex",
            data: { submit_form_target: "button" } do %>
        <span data-submit-form-target="spinner" class="hidden">
          <svg class="h-4 w-4 animate-spin" viewBox="0 0 24 24" fill="none">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V2C5.373 2 1 6.373 1 12h3z"></path>
          </svg>
        </span>
        <span data-submit-form-target="text">Re-run full pipeline</span>
      <% end %>
    </div>
  </div>

  <% uploads_enabled = ActiveModel::Type::Boolean.new.cast(ENV["ENABLE_UPLOADS"] || "true") %>
  <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-lg dark:border-slate-700 dark:bg-slate-900">
    <div class="mb-4">
      <h2 class="text-xl font-bold text-slate-900 dark:text-slate-100">Custom Backgrounds</h2>
      <p class="text-sm text-slate-600 dark:text-slate-400 mt-1">Upload custom background images for each card layout.</p>
    </div>
    <div class="grid gap-6 md:grid-cols-3">
      <% card_generated_at = asset_card&.generated_at || asset_card&.updated_at %>
      <% card_settings_updated_at = card&.updated_at %>
      <% card_stale = card_generated_at && card_settings_updated_at && card_settings_updated_at > card_generated_at %>
      <div class="rounded-xl border border-slate-200 bg-slate-50 p-4 md:p-6 shadow-lg dark:border-slate-600 dark:bg-slate-800">
        <h3 class="text-lg font-bold text-slate-900 dark:text-slate-100 mb-4">Card Background</h3>
        <% if card_generated_at %>
          <p class="text-xs text-slate-500 mb-2">Last captured <%= time_ago_in_words(card_generated_at) %> ago</p>
        <% end %>
        <% if card_stale %>
          <p class="text-xs text-amber-600 dark:text-amber-400 mb-2">Settings changed â€” re-capture recommended</p>
        <% end %>
        <form action="<%= upload_my_profile_asset_path(username: profile.login) %>" method="post" enctype="multipart/form-data" class="space-y-4" data-controller="submit-form">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= hidden_field_tag :tab, "assets" %>
          <input type="hidden" name="kind" value="card">
          <input type="file" name="file" accept="image/*" class="<%= ui_file_input_class %> <%= 'opacity-60 cursor-not-allowed' unless uploads_enabled %>" <%= "disabled" unless uploads_enabled %>>
          <button type="submit" class="<%= ui_secondary_button_class %> w-full <%= 'opacity-60 cursor-not-allowed' unless uploads_enabled %>" <%= "disabled" unless uploads_enabled %> data-submit-form-target="button">
            <span data-submit-form-target="spinner" class="hidden">
              <svg class="h-4 w-4 animate-spin" viewBox="0 0 24 24" fill="none">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V2C5.373 2 1 6.373 1 12h3zm2 5.291A7.962 7.962 0 014 12H1c0 3.042 1.135 5.824 3 7.938l2-2.647z"></path>
              </svg>
            </span>
            <span data-submit-form-target="text">Upload custom background</span>
          </button>
        </form>
        <p class="mt-2 text-xs text-slate-500">Uploads replace the generated background for Card.</p>
        <% unless uploads_enabled %>
          <p class="mt-1 text-xs text-slate-500">Uploads are disabled in this environment.</p>
        <% end %>
      </div>

      <% og_generated_at = asset_og&.generated_at || asset_og&.updated_at %>
      <% og_settings_updated_at = card&.updated_at %>
      <% og_stale = og_generated_at && og_settings_updated_at && og_settings_updated_at > og_generated_at %>
      <div class="rounded-xl border border-slate-200 bg-slate-50 p-4 md:p-6 shadow-lg dark:border-slate-600 dark:bg-slate-800">
        <h3 class="text-lg font-bold text-slate-900 dark:text-slate-100 mb-4">OG Background</h3>
        <% if og_generated_at %>
          <p class="text-xs text-slate-500 mb-2">Last captured <%= time_ago_in_words(og_generated_at) %> ago</p>
        <% end %>
        <% if og_stale %>
          <p class="text-xs text-amber-600 dark:text-amber-400 mb-2">Settings changed â€” re-capture recommended</p>
        <% end %>
        <form action="<%= upload_my_profile_asset_path(username: profile.login) %>" method="post" enctype="multipart/form-data" class="space-y-4" data-controller="submit-form">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= hidden_field_tag :tab, "assets" %>
          <input type="hidden" name="kind" value="og">
          <input type="file" name="file" accept="image/*" class="<%= ui_file_input_class %> <%= 'opacity-60 cursor-not-allowed' unless uploads_enabled %>" <%= "disabled" unless uploads_enabled %>>
          <button type="submit" class="<%= ui_secondary_button_class %> w-full <%= 'opacity-60 cursor-not-allowed' unless uploads_enabled %>" <%= "disabled" unless uploads_enabled %> data-submit-form-target="button">
            <span data-submit-form-target="spinner" class="hidden">
              <svg class="h-4 w-4 animate-spin" viewBox="0 0 24 24" fill="none">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V2C5.373 2 1 6.373 1 12h3zm2 5.291A7.962 7.962 0 014 12H1c0 3.042 1.135 5.824 3 7.938l2-2.647z"></path>
              </svg>
            </span>
            <span data-submit-form-target="text">Upload custom background</span>
          </button>
        </form>
        <p class="mt-2 text-xs text-slate-500">Uploads replace the generated background for OG.</p>
        <% unless uploads_enabled %>
          <p class="mt-1 text-xs text-slate-500">Uploads are disabled in this environment.</p>
        <% end %>
      </div>

      <% simple_generated_at = asset_simple&.generated_at || asset_simple&.updated_at %>
      <% simple_settings_updated_at = card&.updated_at %>
      <% simple_stale = simple_generated_at && simple_settings_updated_at && simple_settings_updated_at > simple_generated_at %>
      <div class="rounded-xl border border-slate-200 bg-slate-50 p-4 md:p-6 shadow-lg dark:border-slate-600 dark:bg-slate-800">
        <h3 class="text-lg font-bold text-slate-900 dark:text-slate-100 mb-4">Simple Background</h3>
        <% if simple_generated_at %>
          <p class="text-xs text-slate-500 mb-2">Last captured <%= time_ago_in_words(simple_generated_at) %> ago</p>
        <% end %>
        <% if simple_stale %>
          <p class="text-xs text-amber-600 dark:text-amber-400 mb-2">Settings changed â€” re-capture recommended</p>
        <% end %>
        <form action="<%= upload_my_profile_asset_path(username: profile.login) %>" method="post" enctype="multipart/form-data" class="space-y-4" data-controller="submit-form">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= hidden_field_tag :tab, "assets" %>
          <input type="hidden" name="kind" value="simple">
          <input type="file" name="file" accept="image/*" class="<%= ui_file_input_class %> <%= 'opacity-60 cursor-not-allowed' unless uploads_enabled %>" <%= 'disabled' unless uploads_enabled %>>
          <button type="submit" class="<%= ui_secondary_button_class %> w-full <%= 'opacity-60 cursor-not-allowed' unless uploads_enabled %>" <%= 'disabled' unless uploads_enabled %> data-submit-form-target="button">
            <span data-submit-form-target="spinner" class="hidden">
              <svg class="h-4 w-4 animate-spin" viewBox="0 0 24 24" fill="none">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V2C5.373 2 1 6.373 1 12h3zm2 5.291A7.962 7.962 0 014 12H1c0 3.042 1.135 5.824 3 7.938l2-2.647z"></path>
              </svg>
            </span>
            <span data-submit-form-target="text">Upload custom background</span>
          </button>
        </form>
        <p class="mt-2 text-xs text-slate-500">Uploads replace the generated background for Simple.</p>
        <% unless uploads_enabled %>
          <p class="mt-1 text-xs text-slate-500">Uploads are disabled in this environment.</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Lightbox Modal -->
  <div id="assetLightbox" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.9); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px); z-index: 9999;" onclick="closeAssetLightbox()">
    <button onclick="closeAssetLightbox(); event.stopPropagation();" style="position: fixed; top: 24px; right: 24px; z-index: 10000; background-color: rgba(0, 0, 0, 0.7); color: white; border: none; border-radius: 50%; padding: 12px; cursor: pointer;">
      <svg style="width: 24px; height: 24px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
    <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; padding: 48px;" onclick="event.stopPropagation()">
      <img id="assetLightboxImage" src="" alt="" class="max-w-full max-h-[85vh] object-contain rounded-lg shadow-2xl">
    </div>
  </div>

  <script>
    function openAssetLightbox(url, label) {
      const lightbox = document.getElementById('assetLightbox');
      const image = document.getElementById('assetLightboxImage');
      
      image.src = url;
      image.alt = label;
      
      lightbox.style.display = 'block';
      document.body.style.overflow = 'hidden';
    }
    
    function closeAssetLightbox() {
      const lightbox = document.getElementById('assetLightbox');
      lightbox.style.display = 'none';
      document.body.style.overflow = '';
    }
    
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeAssetLightbox();
      }
    });
  </script>
</div>
