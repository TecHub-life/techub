<%# Assets Tab %>
<div class="space-y-6">
  <% card = profile.profile_card %>
  <% asset_card ||= profile.profile_assets.find_by(kind: "card") %>
  <% asset_og ||= profile.profile_assets.find_by(kind: "og") %>
  <% asset_simple ||= profile.profile_assets.find_by(kind: "simple") %>

  <%# Card Previews Section - Using the same styling as profile show %>
  <div class="rounded-xl border border-slate-200 bg-gradient-to-br from-slate-50 to-slate-100 p-6 shadow-lg dark:border-slate-700 dark:from-slate-900 dark:to-slate-800">
    <div class="mb-4">
      <h2 class="text-xl font-bold text-slate-900 dark:text-slate-100">Card Previews</h2>
      <p class="text-sm text-slate-600 dark:text-slate-400 mt-1">Your generated trading cards and social images</p>
    </div>
    <% variants = profile_card_variants(profile) %>
    <% has_assets = profile.profile_assets.exists? %>

    <% unless has_assets %>
      <div class="rounded-lg border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 p-4 text-center mb-4">
        <div class="mx-auto mb-2 h-10 w-10 rounded-full bg-slate-200 dark:bg-slate-800 grid place-items-center text-slate-500 text-xl">ðŸŽ´</div>
        <p class="text-sm text-slate-600 dark:text-slate-300">No card assets yet. Generate your profile to create shareable cards.</p>
      </div>
    <% end %>

    <div class="grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      <% variants.each do |v| %>
        <div class="rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden bg-white dark:bg-slate-900 shadow-lg hover:shadow-xl transition">
          <div class="flex items-center justify-between px-4 py-2 text-xs font-medium text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700">
            <div class="flex items-center gap-2">
              <span><%= v[:label] %></span>
              <span class="text-slate-500">â€¢</span>
              <span class="text-slate-500"><%= v[:dims] %> (<%= v[:aspect] %>)</span>
              <span class="text-slate-500">â€¢</span>
              <span class="text-slate-500"><%= v[:usage] %></span>
            </div>
            <% if v[:url].present? %>
              <a href="<%= v[:url] %>" download target="_blank" rel="noopener" class="text-indigo-600 hover:text-indigo-700 dark:text-indigo-400 dark:hover:text-indigo-300 transition">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                </svg>
              </a>
            <% end %>
          </div>
          <% if v[:url].present? %>
            <div class="w-full" style="aspect-ratio: <%= v[:aspect] %>;">
              <img src="<%= v[:url] %>" alt="<%= v[:label] %>" class="w-full h-full object-contain bg-slate-100 dark:bg-slate-900 rounded-lg border border-slate-200 dark:border-slate-700">
            </div>
          <% else %>
            <div class="w-full flex flex-col items-center justify-center text-slate-400 bg-slate-100 dark:bg-slate-800 rounded-lg border border-slate-200 dark:border-slate-700" style="aspect-ratio: <%= v[:aspect] %>;">
              <svg class="h-12 w-12 mb-2 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <p class="text-sm font-medium">Generating...</p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-4 flex flex-wrap gap-2">
      <%= button_to "Generate Social Assets", ops_generate_social_assets_path(username: profile.login), method: :post, form: { data: { turbo: false } }, class: "inline-flex items-center justify-center gap-2 rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm transition hover:bg-slate-50 hover:border-slate-300 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-300 dark:hover:bg-slate-800 dark:hover:border-slate-600", data: { disable_with: "Generatingâ€¦" } %>
      <%= button_to "Re-run Full Pipeline", regenerate_my_profile_ai_path(username: profile.login), method: :post, class: "inline-flex items-center justify-center gap-2 rounded-lg border border-indigo-200 bg-indigo-50 px-4 py-2 text-sm font-medium text-indigo-700 shadow-sm transition hover:bg-indigo-100 hover:border-indigo-300 dark:border-indigo-700 dark:bg-indigo-950/30 dark:text-indigo-300 dark:hover:bg-indigo-900/40 dark:hover:border-indigo-600", data: { disable_with: "Queuingâ€¦" } %>
    </div>
  </div>

  <% uploads_enabled = ActiveModel::Type::Boolean.new.cast(ENV["ENABLE_UPLOADS"] || "true") %>
  <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-lg dark:border-slate-700 dark:bg-slate-900">
    <div class="mb-4">
      <h2 class="text-xl font-bold text-slate-900 dark:text-slate-100">Custom Backgrounds</h2>
      <p class="text-sm text-slate-600 dark:text-slate-400 mt-1">Upload custom background images for each card layout.</p>
    </div>
    <div class="grid gap-6 md:grid-cols-3">
      <% card_generated_at = asset_card&.generated_at || asset_card&.updated_at %>
      <% card_settings_updated_at = card&.updated_at %>
      <% card_stale = card_generated_at && card_settings_updated_at && card_settings_updated_at > card_generated_at %>
      <div class="rounded-xl border border-slate-200 bg-slate-50 p-4 md:p-6 shadow-lg dark:border-slate-600 dark:bg-slate-800">
        <h3 class="text-lg font-bold text-slate-900 dark:text-slate-100 mb-4">Card Background</h3>
        <% if card_generated_at %>
          <p class="text-xs text-slate-500 mb-2">Last captured <%= time_ago_in_words(card_generated_at) %> ago</p>
        <% end %>
        <% if card_stale %>
          <p class="text-xs text-amber-600 dark:text-amber-400 mb-2">Settings changed â€” re-capture recommended</p>
        <% end %>
        <form action="<%= upload_my_profile_asset_path(username: profile.login) %>" method="post" enctype="multipart/form-data" class="space-y-3">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="hidden" name="kind" value="card">
          <input type="file" name="file" accept="image/*" class="block w-full text-sm text-slate-700 dark:text-slate-300" <%= "disabled" unless uploads_enabled %>>
          <button class="w-full inline-flex items-center justify-center gap-2 rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm transition hover:bg-slate-50 hover:border-slate-300 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-300 dark:hover:bg-slate-800 dark:hover:border-slate-600 <%= "opacity-50 cursor-not-allowed" unless uploads_enabled %>" <%= "disabled" unless uploads_enabled %>>Upload Custom Background</button>
        </form>
        <p class="mt-2 text-xs text-slate-500">Uploads replace the generated background for Card.</p>
        <% unless uploads_enabled %>
          <p class="mt-1 text-xs text-slate-500">Uploads are disabled in this environment.</p>
        <% end %>
      </div>

      <% og_generated_at = asset_og&.generated_at || asset_og&.updated_at %>
      <% og_settings_updated_at = card&.updated_at %>
      <% og_stale = og_generated_at && og_settings_updated_at && og_settings_updated_at > og_generated_at %>
      <div class="rounded-xl border border-slate-200 bg-slate-50 p-4 md:p-6 shadow-lg dark:border-slate-600 dark:bg-slate-800">
        <h3 class="text-lg font-bold text-slate-900 dark:text-slate-100 mb-4">OG Background</h3>
        <% if og_generated_at %>
          <p class="text-xs text-slate-500 mb-2">Last captured <%= time_ago_in_words(og_generated_at) %> ago</p>
        <% end %>
        <% if og_stale %>
          <p class="text-xs text-amber-600 dark:text-amber-400 mb-2">Settings changed â€” re-capture recommended</p>
        <% end %>
        <form action="<%= upload_my_profile_asset_path(username: profile.login) %>" method="post" enctype="multipart/form-data" class="space-y-3">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="hidden" name="kind" value="og">
          <input type="file" name="file" accept="image/*" class="block w-full text-sm text-slate-700 dark:text-slate-300" <%= "disabled" unless uploads_enabled %>>
          <button class="w-full inline-flex items-center justify-center gap-2 rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm transition hover:bg-slate-50 hover:border-slate-300 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-300 dark:hover:bg-slate-800 dark:hover:border-slate-600 <%= "opacity-50 cursor-not-allowed" unless uploads_enabled %>" <%= "disabled" unless uploads_enabled %>>Upload Custom Background</button>
        </form>
        <p class="mt-2 text-xs text-slate-500">Uploads replace the generated background for OG.</p>
        <% unless uploads_enabled %>
          <p class="mt-1 text-xs text-slate-500">Uploads are disabled in this environment.</p>
        <% end %>
      </div>

      <% simple_generated_at = asset_simple&.generated_at || asset_simple&.updated_at %>
      <% simple_settings_updated_at = card&.updated_at %>
      <% simple_stale = simple_generated_at && simple_settings_updated_at && simple_settings_updated_at > simple_generated_at %>
      <div class="rounded-xl border border-slate-200 bg-slate-50 p-4 md:p-6 shadow-lg dark:border-slate-600 dark:bg-slate-800">
        <h3 class="text-lg font-bold text-slate-900 dark:text-slate-100 mb-4">Simple Background</h3>
        <% if simple_generated_at %>
          <p class="text-xs text-slate-500 mb-2">Last captured <%= time_ago_in_words(simple_generated_at) %> ago</p>
        <% end %>
        <% if simple_stale %>
          <p class="text-xs text-amber-600 dark:text-amber-400 mb-2">Settings changed â€” re-capture recommended</p>
        <% end %>
        <form action="<%= upload_my_profile_asset_path(username: profile.login) %>" method="post" enctype="multipart/form-data" class="space-y-3">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="hidden" name="kind" value="simple">
          <input type="file" name="file" accept="image/*" class="block w-full text-sm text-slate-700 dark:text-slate-300" <%= 'disabled' unless uploads_enabled %>>
          <button class="w-full inline-flex items-center justify-center gap-2 rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm transition hover:bg-slate-50 hover:border-slate-300 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-300 dark:hover:bg-slate-800 dark:hover:border-slate-600 <%= 'opacity-50 cursor-not-allowed' unless uploads_enabled %>" <%= 'disabled' unless uploads_enabled %>>Upload Custom Background</button>
        </form>
        <p class="mt-2 text-xs text-slate-500">Uploads replace the generated background for Simple.</p>
        <% unless uploads_enabled %>
          <p class="mt-1 text-xs text-slate-500">Uploads are disabled in this environment.</p>
        <% end %>
      </div>
    </div>
  </div>

  <%# Social Assets Section %>
  <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-lg dark:border-slate-700 dark:bg-slate-900">
    <div class="mb-4">
      <h2 class="text-xl font-bold text-slate-900 dark:text-slate-100 mb-2">Social Assets</h2>
      <p class="text-sm text-slate-600 dark:text-slate-400">Generated assets sized for major networks. Click to open full size.</p>
    </div>
    <div class="grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    <% assets_map = profile.profile_assets.index_by(&:kind) %>
    <% @social_targets.each do |t| %>
      <% asset = assets_map[t[:kind].to_s] %>
      <% url = nil %>
      <% if asset&.public_url.present? %>
        <% url = canonical_profile_asset_url(asset.public_url) %>
      <% elsif asset&.local_path.present? %>
        <% url = canonical_profile_asset_url(asset.local_path) %>
      <% end %>
      <div class="rounded border border-slate-200 p-3 dark:border-slate-700">
        <div class="flex items-center justify-between gap-2">
          <div class="text-sm font-medium text-slate-800 dark:text-slate-200"><%= t[:label] %></div>
          <% if t[:hint].present? %>
            <div class="group relative" aria-label="<%= t[:hint] %>">
              <span class="inline-flex h-5 w-5 items-center justify-center rounded-full border border-slate-300 text-[11px] text-slate-600 dark:border-slate-600 dark:text-slate-300" aria-hidden="true">?</span>
              <div class="pointer-events-none invisible absolute right-0 z-10 mt-2 w-48 rounded-md border border-slate-200 bg-white p-2 text-xs text-slate-700 opacity-0 shadow-md transition group-hover:visible group-hover:opacity-100 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-200">
                <%= t[:hint] %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="relative mt-2 overflow-hidden rounded bg-slate-100 dark:bg-slate-900" style="aspect-ratio:<%= t[:aspect] %>">
          <% if url.present? %>
            <a href="<%= url %>" target="_blank" rel="noopener" aria-label="Open <%= t[:label] %> full size" class="focus:outline-none focus:ring-2 focus:ring-indigo-500/60">
              <img src="<%= url %>" alt="<%= t[:label] %>" class="h-full w-full object-cover" loading="lazy">
            </a>
          <% else %>
            <div class="h-full w-full grid place-items-center text-xs text-slate-500">Not generated yet</div>
          <% end %>
          <% if t[:kind] == 'youtube_cover_2560x1440' %>
            <%# Safe area 1546x423 overlay as per Sprout guide %>
            <div class="pointer-events-none absolute inset-0 flex items-center justify-center">
              <div class="border-2 border-yellow-400/80" style="width:60.39%; height:29.38%"></div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
