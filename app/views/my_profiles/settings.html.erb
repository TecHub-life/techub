<% if @profile.present? %>
  <section class="mx-auto max-w-6xl px-4 py-8">
    <!-- Header Section with Title, Dropdown and Actions -->
    <div class="mb-6 rounded-xl border border-slate-200 bg-white p-4 md:p-6 shadow-lg dark:border-slate-700 dark:bg-slate-900" data-controller="tabs" data-tabs-default-value="general">
      <div class="flex flex-col gap-4">
        <!-- Top Row: Title + Dropdown (inline on md+) and Action Buttons -->
        <div class="flex flex-col gap-4 sm:flex-row sm:items-center ">
          <!-- Left: Title and Dropdown inline on md+ -->
          <div class="flex flex-row w-full justify-end sm:justify-start md:justify-start md:items-center gap-2 md:gap-3">
            <h1 class="text-2xl flex w-full sm:w-auto justify-start sm:text-3xl font-bold bg-gradient-to-r from-sky-600 via-indigo-500 to-cyan-500 bg-clip-text text-transparent whitespace-nowrap">Settings</h1>
       
            <% owned = current_user&.profiles&.order(:login) || [] %>
            <% if owned.any? %>
              <select id="profile-select" class="flex w-auto sm:w-full md:w-auto items-center justify-end sm:justify-start md:justify-start rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm transition hover:bg-slate-50 hover:border-slate-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-300 dark:hover:bg-slate-800 dark:hover:border-slate-600" data-safe-navigation="true">
                <% owned.each do |p| %>
                  <option value="<%= my_profile_settings_path(username: p.login) %>" <%= 'selected' if p.login == @profile.login %>>
                    @<%= p.login %>
                  </option>
                <% end %>
              </select>
            <% end %>
          </div>

          <!-- Right: Action Buttons -->
          <div class="flex flex-row gap-2 w-full justify-end">
            <%= link_to my_profiles_path, class: "flex w-full sm:w-1/2 items-center justify-center gap-2 rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm transition hover:bg-slate-50 hover:border-slate-300 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-300 dark:hover:bg-slate-800 dark:hover:border-slate-600" do %>
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              <span>Back</span>
            <% end %>
            <%= link_to "/api-docs", target: "_blank", class: "flex w-full items-center justify-center text-center content-center gap-2 rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm transition hover:bg-slate-50 hover:border-slate-300 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-300 dark:hover:bg-slate-800 dark:hover:border-slate-600" do %>
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <span>API Docs</span>
            <% end %>
          </div>
        </div>
        <!-- Tab Navigation -->
        <div class="sticky top-[60px] z-40 -mx-4 md:-mx-6 sm:mt-4 mb-2 border-b border-slate-200 dark:border-slate-700 bg-white/95 backdrop-blur-sm dark:bg-slate-900/95 w-full">
          <nav class="flex flex-wrap justify-center sm:justify-around gap-2 pb-4 px-2 w-full" aria-label="Settings Tabs">
            <button data-tabs-target="tab" data-tab-name="general" data-action="click->tabs#change" class="flex items-center gap-2 whitespace-nowrap rounded-lg px-4 py-2 text-sm md:text-base lg:text-lg font-medium transition border-transparent text-slate-500 hover:bg-slate-100 hover:text-slate-700 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-slate-300 data-[active]:bg-indigo-600 data-[active]:text-white dark:data-[active]:bg-indigo-600">
              <svg class="h-5 w-5 md:h-6 md:w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span>General</span>
            </button>
            <button data-tabs-target="tab" data-tab-name="backgrounds" data-action="click->tabs#change" class="flex items-center gap-2 whitespace-nowrap rounded-lg px-4 py-2 text-sm md:text-base lg:text-lg font-medium transition border-transparent text-slate-500 hover:bg-slate-100 hover:text-slate-700 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-slate-300 data-[active]:bg-indigo-600 data-[active]:text-white dark:data-[active]:bg-indigo-600">
              <svg class="h-5 w-5 md:h-6 md:w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span>Backgrounds</span>
            </button>
            <button data-tabs-target="tab" data-tab-name="assets" data-action="click->tabs#change" class="flex items-center gap-2 whitespace-nowrap rounded-lg px-4 py-2 text-sm md:text-base lg:text-lg font-medium transition border-transparent text-slate-500 hover:bg-slate-100 hover:text-slate-700 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-slate-300 data-[active]:bg-indigo-600 data-[active]:text-white dark:data-[active]:bg-indigo-600">
              <svg class="h-5 w-5 md:h-6 md:w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
              </svg>
              <span>Assets</span>
            </button>
            <%# <button data-tabs-target="tab" data-tab-name="uploads" data-action="click->tabs#change" class="inline-flex items-center gap-2 whitespace-nowrap rounded-lg px-4 py-2 text-sm md:text-base lg:text-lg font-medium transition border-transparent text-slate-500 hover:bg-slate-100 hover:text-slate-700 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-slate-300 data-[active]:bg-indigo-600 data-[active]:text-white dark:data-[active]:bg-indigo-600">
              <svg class="h-5 w-5 md:h-6 md:w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
              </svg>
              <span>Uploads</span>
            </button> %>
          </nav>
        </div>
      </div>

      <!-- Tab Panels -->
      <div class="mt-2">
        <!-- General Tab (Default) -->
        <div data-tabs-target="panel" data-tab-panel="general">
          <%= render partial: 'my_profiles/tabs/general', locals: {
            profile: @profile
          } %>
        </div>

        <!-- Backgrounds Tab -->
        <div data-tabs-target="panel" data-tab-panel="backgrounds" class="hidden">
          <%= render partial: 'my_profiles/tabs/backgrounds', locals: {
            profile: @profile
          } %>
        </div>
        <div data-tabs-target="panel" data-tab-panel="assets" class="hidden">
          <%= render partial: 'my_profiles/tabs/assets', locals: {
            profile: @profile,
            asset_card: @asset_card,
            asset_og: @asset_og,
            asset_simple: @asset_simple
          } %>
        </div>

        <!-- Uploads Tab -->
        <div data-tabs-target="panel" data-tab-panel="uploads" class="hidden">
          <%= render partial: 'my_profiles/tabs/uploads', locals: {
            profile: @profile
          } %>
        </div>
      </div>
    </div>
  </section>
<% else %>
  <section class="mx-auto max-w-6xl px-4 py-8">
    <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-6">
      <p class="text-yellow-800 dark:text-yellow-200">
        No profile data available. Please check the logs for errors.
      </p>
    </div>
  </section>
<% end %>
