<%# Cards Tab - Unified grid of all variants %>
<div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-6">
  <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100 mb-4 flex items-center gap-2">
    <svg class="h-6 w-6 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
    </svg>
    Cards
  </h3>
  <% base = Rails.root.join("public", "generated", profile.login) %>
  <% public_root = Rails.root.join("public") %>
  <% assets_by_kind = profile.profile_assets.where(kind: [ "card", "og", "simple", "banner", "x_profile_400", "fb_post_1080", "ig_portrait_1080x1350" ]).load.index_by(&:kind) %>
  <% relative_url = lambda do |path|
       next nil if path.blank?
       str_path = path.is_a?(Pathname) ? path.to_s : path.to_s
       begin
         pn = Pathname.new(str_path)
         if pn.exist?
           rel = pn.relative_path_from(public_root)
           url = "/#{rel}"
           ts = File.mtime(pn).to_i rescue nil
           next ts ? "#{url}?v=#{ts}" : url
         end
       rescue ArgumentError
         # fall through to string-based handling
       end

       if str_path.start_with?("http://", "https://")
         str_path
       elsif (public_index = str_path.index("/public/"))
         rel = str_path[(public_index + 7)..-1]
         next nil if rel.blank?
         cleaned = rel.sub(%r{\A/+}, "")
         full = Rails.root.join("public", cleaned)
         ts = File.exist?(full) ? (File.mtime(full).to_i rescue nil) : nil
         url = "/#{cleaned}"
         ts ? "#{url}?v=#{ts}" : url
       else
         nil
       end
     end %>
  <% find_existing_for = lambda do |name|
       next nil unless Dir.exist?(base)
       Dir[base.join("#{name}*.{jpg,jpeg,png}").to_s].find do |candidate|
         (File.size?(candidate) || 0) > 1024
       end
     end %>
  <% asset_url = lambda do |asset, fallback_name|
       if asset&.public_url.present?
         asset.public_url
       elsif asset&.local_path.present?
         relative_url.call(asset.local_path)
       elsif fallback_name
         candidate = find_existing_for.call(fallback_name)
         relative_url.call(candidate)
       end
     end %>
  <% og_asset = assets_by_kind["og"] %>
  <% card_asset = assets_by_kind["card"] %>
  <% simple_asset = assets_by_kind["simple"] %>
  <% banner_asset = assets_by_kind["banner"] %>
  <% x_asset = assets_by_kind["x_profile_400"] %>
  <% fb_asset = assets_by_kind["fb_post_1080"] %>
  <% ig_asset = assets_by_kind["ig_portrait_1080x1350"] %>

  <% og_url = asset_url.call(og_asset, "og") %>
  <% card_url = asset_url.call(card_asset, "card") %>
  <% simple_url = asset_url.call(simple_asset, "simple") %>
  <% banner_url = asset_url.call(banner_asset, "banner") %>
  <% x_profile_url = asset_url.call(x_asset, "x_profile_400") %>
  <% fb_post_url = asset_url.call(fb_asset, "fb_post_1080") %>
  <% ig_portrait_url = asset_url.call(ig_asset, "ig_portrait_1080x1350") %>

  <% variants = [
      { kind: "card",    label: "Main Card",            dims: "1280Ã—720",    aspect: "16/9", usage: "Social posts",        url: card_url },
      { kind: "og",      label: "OpenGraph (Link)",     dims: "1200Ã—630",    aspect: "1200/630", usage: "Link previews",   url: og_url },
      { kind: "simple",  label: "Simple",               dims: "1280Ã—720",    aspect: "16/9",     usage: "Profiles & CVs", url: simple_url },
      { kind: "banner",  label: "Banner",               dims: "1500Ã—500",    aspect: "3/1",      usage: "Header/banner",  url: banner_url },
      { kind: "x_profile_400", label: "X Profile",      dims: "400Ã—400",     aspect: "1/1",      usage: "X avatar",       url: x_profile_url },
      { kind: "ig_portrait_1080x1350", label: "Instagram Portrait", dims: "1080Ã—1350", aspect: "4/5", usage: "Instagram post", url: ig_portrait_url },
      { kind: "fb_post_1080", label: "Facebook Post",   dims: "1080Ã—1080",   aspect: "1/1",      usage: "Facebook post",  url: fb_post_url }
    ] %>

  <% if variants.all? { |v| v[:url].blank? } %>
    <div class="rounded-lg border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 p-6 text-center">
      <div class="mx-auto mb-3 h-12 w-12 rounded-full bg-slate-200 dark:bg-slate-800 grid place-items-center text-slate-500">ðŸŽ´</div>
      <p class="text-sm text-slate-600 dark:text-slate-300">No card assets yet. Generate your profile to create shareable cards.</p>
    </div>
  <% end %>

  <div class="grid gap-6 sm:grid-cols-2 xl:grid-cols-3">
    <% variants.each do |v| %>
      <div class="rounded-lg border border-slate-200 dark:border-slate-700 overflow-hidden bg-slate-50 dark:bg-slate-900 shadow-sm">
        <div class="flex items-center justify-between px-3 py-2 text-xs font-medium text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700">
          <div class="flex items-center gap-2">
            <span><%= v[:label] %></span>
            <span class="text-slate-500">â€¢</span>
            <span class="text-slate-500"><%= v[:dims] %> (<%= v[:aspect] %>)</span>
            <span class="text-slate-500">â€¢</span>
            <span class="text-slate-500"><%= v[:usage] %></span>
          </div>
          <% if v[:url].present? %>
            <a href="<%= v[:url] %>" download target="_blank" rel="noopener" class="text-indigo-700 hover:text-indigo-800 focus:outline-none focus:ring-2 focus:ring-indigo-500/60 dark:text-indigo-300 dark:hover:text-indigo-200 transition" aria-label="Download">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
              </svg>
            </a>
          <% end %>
        </div>
        <div class="overflow-hidden">
          <div class="relative w-full <%= "aspect-[#{v[:aspect]}]" %> bg-slate-100 dark:bg-slate-900">
            <% if v[:url].present? %>
              <img src="<%= v[:url] %>" alt="<%= v[:label] %> for <%= profile.display_name %>" class="absolute inset-0 w-full h-full object-contain" loading="lazy">
            <% else %>
              <div class="absolute inset-0 grid place-items-center text-slate-400">
                <div class="text-xs font-medium">Not generated yet</div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
