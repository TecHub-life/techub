<%# Cards Tab - Unified grid of all variants %>
<% variants = profile_card_variants(profile) %>
<div class="rounded-xl border border-slate-200 bg-gradient-to-br from-slate-50 to-slate-100 p-6 shadow-lg dark:border-slate-700 dark:from-slate-900 dark:to-slate-800">
  <div class="mb-4">
    <h2 class="text-xl font-bold text-slate-900 dark:text-slate-100">Card Previews</h2>
    <p class="text-sm text-slate-600 dark:text-slate-400 mt-1">Your generated trading cards and social images</p>
  </div>
  <% has_assets = profile.profile_assets.exists? %>

  <% unless has_assets %>
    <div class="rounded-lg border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 p-4 text-center mb-4">
      <div class="mx-auto mb-2 h-10 w-10 rounded-full bg-slate-200 dark:bg-slate-800 grid place-items-center text-slate-500 text-xl">ðŸŽ´</div>
      <p class="text-sm text-slate-600 dark:text-slate-300">No card assets yet. Generate your profile to create shareable cards.</p>
    </div>
  <% end %>

  <div class="grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mt-4">
    <% variants.each do |v| %>
      <div class="rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden bg-white dark:bg-slate-900 shadow-lg hover:shadow-xl transition">
        <div class="flex items-center justify-between px-4 py-2 text-xs font-medium text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700">
          <div class="flex items-center gap-2">
            <span><%= v[:label] %></span>
            <span class="text-slate-500">â€¢</span>
            <span class="text-slate-500"><%= v[:dims] %> (<%= v[:aspect] %>)</span>
            <span class="text-slate-500">â€¢</span>
            <span class="text-slate-500"><%= v[:usage] %></span>
          </div>
          <% if v[:url].present? %>
            <a href="<%= v[:url] %>" download target="_blank" rel="noopener" class="text-indigo-600 hover:text-indigo-700 dark:text-indigo-400 dark:hover:text-indigo-300 transition">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
              </svg>
            </a>
          <% end %>
        </div>
        <% if v[:url].present? %>
          <div class="w-full cursor-pointer" style="aspect-ratio: <%= v[:aspect] %>;" onclick="openImageLightbox('<%= j v[:url] %>', '<%= j v[:label] %>')">
            <img src="<%= v[:url] %>" alt="<%= v[:label] %>" class="w-full h-full object-contain bg-slate-100 dark:bg-slate-900 rounded-lg border border-slate-200 dark:border-slate-700 hover:opacity-90 transition-opacity">
          </div>
        <% else %>
          <div class="w-full flex flex-col items-center justify-center text-slate-400 bg-slate-100 dark:bg-slate-800 rounded-lg border border-slate-200 dark:border-slate-700" style="aspect-ratio: <%= v[:aspect] %>;">
            <svg class="h-12 w-12 mb-2 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <p class="text-sm font-medium">Generating...</p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Lightbox Modal -->
  <div id="imageLightbox" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.9); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px); z-index: 9999;" onclick="closeImageLightbox()">
    <button onclick="closeImageLightbox(); event.stopPropagation();" style="position: fixed; top: 24px; right: 24px; z-index: 10000; background-color: rgba(0, 0, 0, 0.7); color: white; border: none; border-radius: 50%; padding: 12px; cursor: pointer;">
      <svg style="width: 24px; height: 24px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
    <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; padding: 48px;" onclick="event.stopPropagation()">
      <div class="relative max-w-6xl max-h-full">
        <img id="lightboxImage" src="" alt="" class="max-w-full max-h-[85vh] object-contain rounded-lg shadow-2xl">
        <div class="absolute bottom-0 left-0 right-0 text-white p-4 rounded-b-lg" style="background: rgba(0, 0, 0, 0.8); backdrop-filter: blur(4px);">
          <h3 id="lightboxTitle" class="text-lg font-semibold"></h3>
        </div>
      </div>
    </div>
  </div>

  <script>
    function openImageLightbox(url, label) {
      const lightbox = document.getElementById('imageLightbox');
      const image = document.getElementById('lightboxImage');
      const title = document.getElementById('lightboxTitle');
      
      image.src = url;
      image.alt = label;
      title.textContent = label;
      
      lightbox.style.display = 'block';
      document.body.style.overflow = 'hidden';
    }
    
    function closeImageLightbox() {
      const lightbox = document.getElementById('imageLightbox');
      lightbox.style.display = 'none';
      document.body.style.overflow = '';
    }
    
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeImageLightbox();
      }
    });
  </script>
</div>

