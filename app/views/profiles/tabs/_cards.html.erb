<%# Cards Tab - Unified grid of all variants %>
<div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-6">
  <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100 mb-4 flex items-center gap-2">
    <svg class="h-6 w-6 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
    </svg>
    Cards
  </h3>
  <% variants = profile_card_variants(profile) %>

  <% if variants.all? { |v| v[:url].blank? } %>
    <div class="rounded-lg border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 p-6 text-center">
      <div class="mx-auto mb-3 h-12 w-12 rounded-full bg-slate-200 dark:bg-slate-800 grid place-items-center text-slate-500">ğŸ´</div>
      <p class="text-sm text-slate-600 dark:text-slate-300">No card assets yet. Generate your profile to create shareable cards.</p>
    </div>
  <% end %>

  <div class="space-y-6">
    <% variants.each do |v| %>
      <% url = v[:url] %>
      <div class="rounded-lg border border-slate-200 dark:border-slate-700 overflow-hidden bg-slate-50 dark:bg-slate-900 shadow-sm">
        <div class="flex items-center justify-between px-3 py-2 text-xs font-medium text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700">
          <div class="flex items-center gap-2">
            <span><%= v[:label] %></span>
            <span class="text-slate-500">â€¢</span>
            <span class="text-slate-500"><%= v[:dims] %> (<%= v[:aspect] %>)</span>
            <span class="text-slate-500">â€¢</span>
            <span class="text-slate-500"><%= v[:usage] %></span>
          </div>
          <% if url.present? %>
            <a href="<%= url %>" download target="_blank" rel="noopener" class="text-indigo-700 hover:text-indigo-800 focus:outline-none focus:ring-2 focus:ring-indigo-500/60 dark:text-indigo-300 dark:hover:text-indigo-200 transition" aria-label="Download">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
              </svg>
            </a>
          <% end %>
        </div>
        <div class="overflow-hidden">
          <div class="relative w-full <%= "aspect-[#{v[:aspect]}]" %> bg-slate-100 dark:bg-slate-900" style="aspect-ratio: <%= v[:aspect] %>">
            <% if url.present? %>
              <img src="<%= url %>" alt="<%= v[:label] %> for <%= profile.display_name %>" class="absolute inset-0 w-full h-full object-contain" loading="lazy">
            <% else %>
              <div class="absolute inset-0 grid place-items-center text-slate-400">
                <div class="text-xs font-medium">Not generated yet</div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
