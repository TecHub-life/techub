<%# Stats & Traits Tab - Card stats, buff, weakness, vibe, special moves %>
<div class="space-y-6">
  <% card = profile.profile_card %>
  <% stats_history = @stats_history || [] %>
  <% top_langs = @languages.first(5) %>
  <% 
    all_topics = @top_repositories.flat_map { |r| r.respond_to?(:topics) ? r.topics : [] }
    # Fallback if topics attribute is not directly available on the object wrapper, though repository_json uses repository_topics.map(&:name)
    # Checking controller: repository_json maps topics. 
    # But here we are likely dealing with ActiveRecord objects. 
    # Profile#top_repositories includes :repository_topics.
    all_topics = @top_repositories.flat_map { |r| r.repository_topics.map(&:name) }
    topic_counts = all_topics.tally.sort_by { |_, count| -count }.first(15)
  %>

  <%# Languages & Topics Row %>
  <% 
    activity = @recent_activity 
    events = activity&.event_breakdown || {}
    # Clean up event names for display
    readable_events = events.map do |type, count|
      label = type.to_s.gsub('Event', '').underscore.humanize.titleize
      label = "Code Pushes" if type == "PushEvent"
      label = "PRs Opened" if type == "PullRequestEvent" 
      label = "Issues" if type == "IssuesEvent"
      [label, count]
    end.sort_by { |_, c| -c }.first(5)
  %>

  <% if top_langs.any? || topic_counts.any? || readable_events.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <%# Languages %>
      <% if top_langs.any? %>
        <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-6">
          <h3 class="text-sm font-bold text-slate-700 dark:text-slate-300 mb-4 uppercase tracking-wide flex items-center gap-2">
            <svg class="h-4 w-4 text-cyan-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
            Top Languages
          </h3>
          <div class="space-y-3">
            <% total_bytes = top_langs.sum(&:count) %>
            <% top_langs.each do |lang| %>
              <% percent = (lang.count.to_f / total_bytes * 100).round(1) %>
              <div>
                <div class="flex justify-between text-sm mb-1">
                  <span class="font-medium text-slate-700 dark:text-slate-200"><%= lang.name %></span>
                  <span class="text-slate-500 dark:text-slate-400"><%= percent %>%</span>
                </div>
                <div class="w-full bg-slate-100 dark:bg-slate-800 rounded-full h-2.5">
                  <div class="bg-cyan-500 h-2.5 rounded-full" style="width: <%= percent %>%"></div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <%# Activity Breakdown %>
      <% if readable_events.any? %>
        <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-6">
          <h3 class="text-sm font-bold text-slate-700 dark:text-slate-300 mb-4 uppercase tracking-wide flex items-center gap-2">
            <svg class="h-4 w-4 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
            Recent Activity (30d)
          </h3>
          <div class="space-y-3">
            <% max_count = readable_events.first&.last.to_f %>
            <% readable_events.each do |name, count| %>
              <% percent = (count / max_count * 100).round %>
              <div>
                <div class="flex justify-between text-sm mb-1">
                  <span class="font-medium text-slate-700 dark:text-slate-200"><%= name %></span>
                  <span class="text-slate-500 dark:text-slate-400"><%= count %></span>
                </div>
                <div class="w-full bg-slate-100 dark:bg-slate-800 rounded-full h-2.5">
                  <div class="bg-emerald-500 h-2.5 rounded-full" style="width: <%= percent %>%"></div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <%# Topics Cloud %>
      <% if topic_counts.any? %>
        <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-6">
          <h3 class="text-sm font-bold text-slate-700 dark:text-slate-300 mb-4 uppercase tracking-wide flex items-center gap-2">
            <svg class="h-4 w-4 text-fuchsia-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
            </svg>
            Top Topics
          </h3>
          <div class="flex flex-wrap gap-2">
            <% topic_counts.each do |name, count| %>
              <%= link_to directory_path(tags: name), class: "inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-sm bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 text-slate-700 dark:text-slate-300 hover:border-fuchsia-300 dark:hover:border-fuchsia-700 hover:text-fuchsia-600 dark:hover:text-fuchsia-400 transition-colors" do %>
                <span>#<%= name %></span>
                <% if count > 1 %>
                  <span class="text-xs text-slate-400 dark:text-slate-500 bg-slate-100 dark:bg-slate-700/50 px-1.5 rounded-full"><%= count %></span>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  
  <%# Historical Growth Charts - Only show if we have meaningful data %>
  <% if stats_history.any? && stats_history.count > 1 %>
    <% 
       start_stars = stats_history.first.total_stars
       end_stars = stats_history.last.total_stars
       star_change = end_stars - start_stars
       
       start_followers = stats_history.first.followers
       end_followers = stats_history.last.followers
       follower_change = end_followers - start_followers
       
       has_growth = star_change.abs > 0 || follower_change.abs > 0
    %>
    
    <% if has_growth %>
      <div class="grid gap-6 md:grid-cols-2">
        <%# Star Growth %>
        <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-6">
          <h3 class="text-sm font-bold text-slate-700 dark:text-slate-300 mb-4 uppercase tracking-wide flex items-center gap-2">
            <svg class="h-4 w-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            Star History (30 Days)
          </h3>
          <div class="h-[200px] w-full relative">
            <canvas
              data-controller="stats-chart"
              data-stats-chart-labels-value="<%= stats_history.map { |s| s.stat_date.strftime('%b %d') }.to_json %>"
              data-stats-chart-data-value="<%= stats_history.map(&:total_stars).to_json %>"
              data-stats-chart-label-value="Total Stars"
              data-stats-chart-color-value="#eab308"
            ></canvas>
          </div>
        </div>

        <%# Follower Growth %>
        <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-6">
          <h3 class="text-sm font-bold text-slate-700 dark:text-slate-300 mb-4 uppercase tracking-wide flex items-center gap-2">
            <svg class="h-4 w-4 text-indigo-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
            </svg>
            Follower History (30 Days)
          </h3>
          <div class="h-[200px] w-full relative">
            <canvas
              data-controller="stats-chart"
              data-stats-chart-labels-value="<%= stats_history.map { |s| s.stat_date.strftime('%b %d') }.to_json %>"
              data-stats-chart-data-value="<%= stats_history.map(&:followers).to_json %>"
              data-stats-chart-label-value="Followers"
              data-stats-chart-color-value="#6366f1"
            ></canvas>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  
  <% if card.present? %>
    <%# Primary Stats %>
    <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-6">
      <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100 mb-6 flex items-center gap-2">
        <svg class="h-6 w-6 text-indigo-500" fill="currentColor" viewBox="0 0 20 20">
          <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"/>
        </svg>
        Primary Stats
      </h3>
      
      <div class="grid gap-6 sm:grid-cols-3">
        <%# Attack %>
        <div class="space-y-2">
          <div class="flex items-center justify-between">
            <span class="text-base sm:text-sm font-semibold text-slate-700 dark:text-slate-300 flex items-center gap-2">
              <svg class="h-5 w-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"/>
              </svg>
              Attack
            </span>
            <span class="text-2xl font-bold text-yellow-600 dark:text-yellow-400"><%= card.attack %></span>
          </div>
          <div class="h-3 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-yellow-500 to-amber-400 rounded-full transition-all duration-500" style="width: <%= card.attack %>%"></div>
          </div>
        </div>

        <%# Defense %>
        <div class="space-y-2">
          <div class="flex items-center justify-between">
            <span class="text-base sm:text-sm font-semibold text-slate-700 dark:text-slate-300 flex items-center gap-2">
              <svg class="h-5 w-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Defense
            </span>
            <span class="text-2xl font-bold text-blue-600 dark:text-blue-400"><%= card.defense %></span>
          </div>
          <div class="h-3 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-blue-500 to-cyan-400 rounded-full transition-all duration-500" style="width: <%= card.defense %>%"></div>
          </div>
        </div>

        <%# Speed %>
        <div class="space-y-2">
          <div class="flex items-center justify-between">
            <span class="text-base sm:text-sm font-semibold text-slate-700 dark:text-slate-300 flex items-center gap-2">
              <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"/>
              </svg>
              Speed
            </span>
            <span class="text-2xl font-bold text-green-600 dark:text-green-400"><%= card.speed %></span>
          </div>
          <div class="h-3 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-emerald-500 to-green-400 rounded-full transition-all duration-500" style="width: <%= card.speed %>%"></div>
          </div>
        </div>
      </div>
    </div>

    <%# Player Traits - Full Width Grid %>
    <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-6">
      <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100 mb-4 flex items-center gap-2">
        <svg class="h-6 w-6 text-indigo-500" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
        </svg>
        Player Traits
      </h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
        <%# Buff %>
        <div class="border border-slate-200 dark:border-slate-700 rounded-lg p-4">
          <h4 class="text-xs font-bold text-green-700 dark:text-green-400 mb-2 flex items-center gap-1 uppercase tracking-wide">
            <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            Buff
          </h4>
          <p class="text-sm sm:text-base font-semibold text-slate-900 dark:text-slate-100"><%= card.buff.presence || "—" %></p>
          <% if card.buff_description.present? %>
            <p class="text-xs sm:text-sm text-slate-600 dark:text-slate-400 mt-1"><%= card.buff_description %></p>
          <% end %>
        </div>

        <%# Weakness %>
        <div class="border border-slate-200 dark:border-slate-700 rounded-lg p-4">
          <h4 class="text-xs font-bold text-red-700 dark:text-red-400 mb-2 flex items-center gap-1 uppercase tracking-wide">
            <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd"/>
            </svg>
            Weakness
          </h4>
          <p class="text-sm sm:text-base font-semibold text-slate-900 dark:text-slate-100"><%= card.weakness.presence || "—" %></p>
          <% if card.weakness_description.present? %>
            <p class="text-xs sm:text-sm text-slate-600 dark:text-slate-400 mt-1"><%= card.weakness_description %></p>
          <% end %>
        </div>

        <%# Vibe %>
        <div class="border border-slate-200 dark:border-slate-700 rounded-lg p-4">
          <h4 class="text-xs font-bold text-teal-700 dark:text-teal-400 mb-2 flex items-center gap-1 uppercase tracking-wide">
            <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 3.5a1.5 1.5 0 013 0V4a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-.5a1.5 1.5 0 000 3h.5a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-.5a1.5 1.5 0 00-3 0v.5a1 1 0 01-1 1H6a1 1 0 01-1-1v-3a1 1 0 00-1-1h-.5a1.5 1.5 0 010-3H4a1 1 0 001-1V6a1 1 0 011-1h3a1 1 0 001-1v-.5z"/>
            </svg>
            Vibe
          </h4>
          <p class="text-sm sm:text-base font-semibold text-slate-900 dark:text-slate-100"><%= card.vibe.presence || "—" %></p>
          <% if card.vibe_description.present? %>
            <p class="text-xs sm:text-sm text-slate-600 dark:text-slate-400 mt-1"><%= card.vibe_description %></p>
          <% end %>
        </div>

        <%# Special Move %>
        <div class="border-2 border-indigo-200 dark:border-indigo-800 bg-gradient-to-br from-indigo-50 to-teal-50 dark:from-indigo-950/20 dark:to-teal-950/20 rounded-lg p-4">
          <h4 class="text-xs font-bold text-indigo-700 dark:text-indigo-400 mb-2 flex items-center gap-1 uppercase tracking-wide">
            <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"/>
            </svg>
            Special Move
          </h4>
          <p class="text-sm sm:text-base font-bold text-indigo-900 dark:text-indigo-100"><%= card.special_move.presence || "—" %></p>
          <% if card.special_move_description.present? %>
            <p class="text-xs sm:text-sm text-indigo-700 dark:text-indigo-300 mt-1"><%= card.special_move_description %></p>
          <% end %>
        </div>
      </div>
    </div>

    <%# Card Attributes & Tags - 2 Column Row %>
    <div class="grid gap-6 md:grid-cols-2">
      <%# Card Attributes %>
      <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-5">
        <h4 class="text-sm font-bold text-slate-700 dark:text-slate-300 mb-3 uppercase tracking-wide">Card Attributes</h4>
        <div class="space-y-3">
          <% if card.playing_card.present? %>
            <div class="flex items-center justify-between py-2">
              <span class="text-sm text-slate-600 dark:text-slate-400">Playing Card</span>
              <span class="text-sm font-semibold text-slate-900 dark:text-slate-100"><%= card.playing_card %></span>
            </div>
          <% end %>
          <% if card.spirit_animal.present? %>
            <div class="flex items-center justify-between py-2">
              <span class="text-sm text-slate-600 dark:text-slate-400">Spirit Animal</span>
              <span class="text-sm font-semibold text-slate-900 dark:text-slate-100"><%= card.spirit_animal %></span>
            </div>
          <% end %>
          <% if card.archetype.present? %>
            <div class="flex items-center justify-between py-2">
              <span class="text-sm text-slate-600 dark:text-slate-400">Archetype</span>
              <span class="text-sm font-semibold text-slate-900 dark:text-slate-100"><%= card.archetype %></span>
            </div>
          <% end %>
        </div>
      </div>

      <%# Tags %>
      <% if Array(card.tags).any? %>
        <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-5">
          <h4 class="text-sm font-bold text-slate-700 dark:text-slate-300 mb-3 uppercase tracking-wide">Tags</h4>
          <div class="flex flex-wrap gap-2">
            <% Array(card.tags).each do |t| %>
              <%= link_to directory_path(tags: t.to_s.downcase), class: "inline-flex items-center gap-1 rounded-full bg-cyan-100 dark:bg-cyan-950 px-3 py-1.5 text-sm font-medium text-cyan-700 dark:text-cyan-300 hover:bg-cyan-200 dark:hover:bg-cyan-900/60 transition" do %>
                <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
                </svg>
                <%= t.to_s.downcase %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

  <% else %>
    <%# No Card Data %>
