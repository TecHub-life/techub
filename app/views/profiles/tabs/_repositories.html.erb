<%# Repositories Tab - Pinned and Top repositories %>
<div class="space-y-6">
  <%# Pinned Repositories %>
  <% if pinned_repositories.present? && pinned_repositories.any? %>
    <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-6">
      <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100 mb-4 flex items-center gap-2">
        <svg class="h-6 w-6 text-indigo-500" fill="currentColor" viewBox="0 0 20 20">
          <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z"/>
        </svg>
        Pinned Repositories
      </h3>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <% pinned_repositories.each do |repo| %>
          <a href="<%= repo.html_url %>" target="_blank" rel="noopener" class="flex flex-col h-full border border-slate-200 dark:border-slate-700 rounded-lg p-4 hover:shadow-md hover:border-indigo-300 dark:hover:border-indigo-700 transition group">
            <h4 class="font-semibold text-slate-900 dark:text-slate-100 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition">
              <%= repo.name %>
            </h4>
            <% if repo.description.present? %>
              <p class="text-sm text-slate-600 dark:text-slate-400 mt-2 line-clamp-2">
                <%= repo.description %>
              </p>
            <% end %>
            <div class="flex items-center gap-4 mt-3 text-xs text-slate-500 dark:text-slate-400">
              <span class="flex items-center gap-1">
                <svg class="h-4 w-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                <%= repo.stargazers_count %>
              </span>
              <% if repo.forks_count && repo.forks_count > 0 %>
                <span class="flex items-center gap-1">
                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.707 3.293a1 1 0 010 1.414L5.414 7H11a7 7 0 017 7v2a1 1 0 11-2 0v-2a5 5 0 00-5-5H5.414l2.293 2.293a1 1 0 11-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <%= repo.forks_count %>
                </span>
              <% end %>
              <% if repo.language.present? %>
                <span class="flex items-center gap-1">
                  <span class="h-2 w-2 rounded-full bg-indigo-500"></span>
                  <%= repo.language %>
                </span>
              <% end %>
            </div>
            <% if repo.topics.present? && repo.topics.any? %>
              <div class="flex flex-wrap gap-1 mt-auto pt-3">
                <% repo.topics.first(5).each do |topic| %>
                  <span class="text-xs bg-indigo-100 dark:bg-indigo-950 text-indigo-700 dark:text-indigo-300 px-2 py-0.5 rounded-full">
                    <%= topic.name %>
                  </span>
                <% end %>
              </div>
            <% end %>
          </a>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Top Repositories by Stars %>
  <% if top_repositories&.any? %>
    <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-6">
      <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100 mb-4 flex items-center gap-2">
        <svg class="h-6 w-6 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        Top Repositories by Stars
      </h3>
      <div class="space-y-4">
        <% top_repositories.first(10).each do |repo| %>
          <a href="<%= repo.html_url %>" target="_blank" rel="noopener" class="block border-l-4 border-yellow-400 dark:border-yellow-600 pl-4 py-2 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-r transition group">
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1 min-w-0">
                <h4 class="font-semibold text-slate-900 dark:text-slate-100 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition">
                  <%= repo.name %>
                </h4>
                <% if repo.description.present? %>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mt-1">
                    <%= repo.description %>
                  </p>
                <% end %>
                <div class="flex items-center gap-4 mt-2 text-xs text-slate-500 dark:text-slate-400">
                  <span class="flex items-center gap-1 font-semibold">
                    <svg class="h-4 w-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                    <%= repo.stargazers_count %>
                  </span>
                  <% if repo.forks_count && repo.forks_count > 0 %>
                    <span class="flex items-center gap-1">
                      <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.707 3.293a1 1 0 010 1.414L5.414 7H11a7 7 0 017 7v2a1 1 0 11-2 0v-2a5 5 0 00-5-5H5.414l2.293 2.293a1 1 0 11-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                      <%= repo.forks_count %>
                    </span>
                  <% end %>
                  <% if repo.language.present? %>
                    <span class="flex items-center gap-1">
                      <span class="h-2 w-2 rounded-full bg-indigo-500"></span>
                      <%= repo.language %>
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
            <% if repo.topics.present? && repo.topics.any? %>
              <div class="flex flex-wrap gap-1.5 mt-2">
                <% repo.topics.each do |topic| %>
                  <span class="text-xs bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 px-2 py-1 rounded">
                    <%= topic.name %>
                  </span>
                <% end %>
              </div>
            <% end %>
          </a>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Empty State %>
  <% if (pinned_repositories.blank? || pinned_repositories.empty?) && (top_repositories.blank? || top_repositories.empty?) %>
    <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-12 text-center">
      <svg class="h-16 w-16 mx-auto text-slate-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
      </svg>
      <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-2">No repositories found</h3>
      <p class="text-slate-600 dark:text-slate-400">This profile doesn't have any public repositories yet.</p>
    </div>
  <% end %>
</div>
