<header class="fixed inset-x-0 top-0 z-50 border-b border-slate-200 bg-white/70 backdrop-blur dark:border-slate-800 dark:bg-slate-950/70">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
    <%= link_to root_path, class: "flex items-center gap-2 text-lg font-semibold text-slate-900 dark:text-slate-100" do %>
      <span class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-slate-900 text-sm font-bold text-white shadow-sm shadow-slate-900/30 dark:bg-slate-100 dark:text-slate-900">
        TH
      </span>
      <span>TecHub</span>
    <% end %>

    <nav class="hidden items-center gap-6 text-sm font-medium text-slate-600 dark:text-slate-300 md:flex">
      <%= link_to "Directory", directory_path, class: nav_link_class(directory_path) %>
      <%= link_to "Leaderboards", leaderboards_path, class: nav_link_class(leaderboards_path) %>
      <%= link_to "Analytics", analytics_path, class: nav_link_class(analytics_path) %>
      <%= link_to "FAQ", faq_path, class: nav_link_class(faq_path) %>
      <%= link_to "Submit", submit_path, class: nav_link_class(submit_path) %>
    </nav>

    <div class="flex items-center gap-3">
      <button
        type="button"
        class="inline-flex h-10 w-10 items-center justify-center rounded-full border border-slate-200 bg-white text-slate-700 shadow-sm transition hover:border-slate-300 hover:bg-slate-100 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-300 dark:hover:border-slate-600 dark:hover:bg-slate-800"
        data-action="theme#toggle"
        data-theme-target="button"
      >
        <span data-theme-target="icon" aria-hidden="true">ðŸŒ—</span>
        <span class="sr-only">Toggle theme</span>
      </button>

      <% if current_user %>
        <%= link_to current_user.login, current_user.github_profile_url, target: "_blank", rel: "noopener", class: "hidden text-sm font-semibold text-slate-600 underline-offset-2 hover:underline dark:text-slate-300 md:inline" %>
      <% else %>
        <%= link_to "Login", auth_github_path, class: "hidden rounded-full border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-700 transition hover:border-slate-300 hover:bg-slate-100 dark:border-slate-700 dark:text-slate-200 dark:hover:border-slate-600 md:inline" %>
      <% end %>
    </div>
  </div>
</header>
