<%# 400x400 â€“ LinkedIn profile image (avatar). %>
<div class="w-[400px] h-[400px] bg-slate-900 overflow-hidden grid place-items-center">
  <% avatar_choice = @profile.profile_card&.avatar_choice || 'real' %>
  <% ai_avatar = @profile.profile_assets.find_by(kind: 'avatar_1x1') %>
  <% avatar_src = (avatar_choice == 'ai' && ai_avatar&.public_url.present?) ? ai_avatar.public_url : @profile.avatar_url %>
  <div class="h-72 w-72 rounded-full overflow-hidden border-4 border-white/70 shadow-2xl">
    <img src="<%= avatar_src %>" alt="<%= @profile.display_name %> avatar" class="h-full w-full object-cover">
  </div>
</div>

