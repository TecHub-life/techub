<% gen_dir = Rails.root.join('public','generated', @profile.login) %>
<% card_prefs = @profile.profile_card %>
<% choice = card_prefs&.bg_choice_card || 'default' %>
<% color_hex = (card_prefs&.bg_color_card || '#0f172a') %>

<% # Resolve image based on choice: 'ai' prefers 3x1 → card → 16x9; 'default' uses /default-card.jpg; 'color' none %>
<% asset_3x1 = @profile.profile_assets.find_by(kind: 'avatar_3x1') %>
<% asset_card = @profile.profile_assets.find_by(kind: 'card') %>
<% asset_bg16 = @profile.profile_assets.find_by(kind: 'avatar_16x9') %>
<% bg_url = nil %>
<% if choice == 'ai' %>
  <% if asset_3x1&.public_url.present? %>
    <% bg_url = asset_3x1.public_url %>
  <% elsif asset_card&.public_url.present? %>
    <% bg_url = asset_card.public_url %>
  <% elsif asset_bg16&.public_url.present? %>
    <% bg_url = asset_bg16.public_url %>
  <% elsif Dir.exist?(gen_dir) %>
    <% file3 = Dir[gen_dir.join('avatar-3x1*.jpg').to_s].first || Dir[gen_dir.join('avatar-3x1*.png').to_s].first %>
    <% file = file3 || Dir[gen_dir.join('card-bg-16x9*.jpg').to_s].first || Dir[gen_dir.join('card-bg-16x9*.png').to_s].first || Dir[gen_dir.join('avatar-16x9*.jpg').to_s].first || Dir[gen_dir.join('avatar-16x9*.png').to_s].first %>
    <% bg_url = "/generated/#{@profile.login}/#{File.basename(file)}" if file %>
  <% end %>
  <% if bg_url.nil? %>
    <% bg_url = supporting_art_url_for(login: @profile.login, aspect: :card) %>
  <% end %>
<% elsif choice == 'default' %>
  <% bg_url = supporting_art_url_for(login: @profile.login, aspect: :card) %>
<% end %>
<div class="w-[1280px] h-[720px] bg-gray-900 overflow-hidden relative grid grid-rows-[216px_504px]">
  
  <div class="relative row-start-1 row-end-2">
    <% if choice == 'color' %>
      <div class="absolute inset-0" style="background:<%= color_hex %>"></div>
    <% elsif bg_url %>
      <img src="<%= bg_url %>" alt="Background" class="absolute inset-0 w-full h-full object-cover opacity-28 pointer-events-none">
    <% end %>
  </div>

  <div class="relative row-start-2 row-end-3 grid grid-cols-[360px_1fr]">
    <div class="flex items-center justify-center">
      <div class="w-[280px] h-[280px] rounded-2xl p-1.5 bg-gradient-to-r from-sky-500 via-cyan-500 to-emerald-500 shadow-2xl">
        <div class="w-full h-full rounded-xl overflow-hidden bg-gray-800">
          <img src="<%= avatar_image_url_for(@profile) %>" alt="<%= @profile.display_name %> avatar" class="w-full h-full object-cover object-center">
        </div>
      </div>
    </div>

    <div class="pr-8 py-4">
      <div class="space-y-2">
        <% name = @profile.display_name %>
        <% handle = @profile.login %>
        <% name_size = name.to_s.length > 25 ? "text-3xl" : name.to_s.length > 18 ? "text-4xl" : "text-5xl" %>
        <% handle_size = handle.to_s.length > 20 ? "text-base" : "text-xl" %>
        <h1 class="<%= name_size %> font-bold text-white tracking-wide drop-shadow-sm leading-tight"><%= name %></h1>
        <p class="<%= handle_size %> font-medium text-sky-400">@<%= handle %></p>
      </div>

      <% card = @profile.profile_card %>
      <% if card&.long_bio.present? %>
        <p class="mt-2 text-gray-300 text-base leading-snug line-clamp-3"><%= card.long_bio %></p>
      <% end %>

      <div class="mt-3 flex flex-wrap gap-3">
        <% if card&.attack.present? %>
          <span class="px-3 py-1.5 rounded-full bg-gray-800/80 border border-gray-700/70 text-amber-300 font-semibold">ATK <%= card.attack %></span>
        <% end %>
        <% if card&.defense.present? %>
          <span class="px-3 py-1.5 rounded-full bg-gray-800/80 border border-gray-700/70 text-blue-300 font-semibold">DEF <%= card.defense %></span>
        <% end %>
        <% if card&.speed.present? %>
          <span class="px-3 py-1.5 rounded-full bg-gray-800/80 border border-gray-700/70 text-green-300 font-semibold">SPD <%= card.speed %></span>
        <% end %>
      </div>

      <% if card && Array(card.tags).any? %>
        <div class="mt-2 flex flex-wrap gap-2">
          <% Array(card.tags).first(6).each do |t| %>
            <span class="px-3 py-1.5 rounded-full bg-gray-800/80 border border-gray-700/70 text-indigo-300 font-medium">#<%= t.to_s.downcase %></span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
