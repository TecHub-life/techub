<% gen_dir = Rails.root.join('public','generated', @profile.login) %>
<% card_prefs = @profile.profile_card %>
<% choice = card_prefs&.bg_choice_card || 'ai' %>
<% color_hex = (card_prefs&.bg_color_card || '#0f172a') %>

<% # Resolve image based on choice: 'ai' prefers 3x1 → card → 16x9; 'default' uses /default-card.jpg; 'color' none %>
<% asset_3x1 = @profile.profile_assets.find_by(kind: 'avatar_3x1') %>
<% asset_card = @profile.profile_assets.find_by(kind: 'card') %>
<% asset_bg16 = @profile.profile_assets.find_by(kind: 'avatar_16x9') %>
<% bg_url = nil %>
<% if choice == 'ai' %>
  <% if asset_3x1&.public_url.present? %>
    <% bg_url = asset_3x1.public_url %>
  <% elsif asset_card&.public_url.present? %>
    <% bg_url = asset_card.public_url %>
  <% elsif asset_bg16&.public_url.present? %>
    <% bg_url = asset_bg16.public_url %>
  <% elsif Dir.exist?(gen_dir) %>
    <% file3 = Dir[gen_dir.join('avatar-3x1*.jpg').to_s].first || Dir[gen_dir.join('avatar-3x1*.png').to_s].first %>
    <% file = file3 || Dir[gen_dir.join('card-bg-16x9*.jpg').to_s].first || Dir[gen_dir.join('card-bg-16x9*.png').to_s].first || Dir[gen_dir.join('avatar-16x9*.jpg').to_s].first || Dir[gen_dir.join('avatar-16x9*.png').to_s].first %>
    <% bg_url = "/generated/#{@profile.login}/#{File.basename(file)}" if file %>
  <% end %>
<% elsif choice == 'default' %>
  <% bg_url = '/default-card.jpg' %>
<% end %>
<div class="w-[1280px] h-[720px] bg-gray-900 overflow-hidden relative grid grid-rows-[240px_480px]">
  <div class="relative row-start-1 h-[240px] overflow-hidden z-10">
    <% if choice == 'color' %>
      <div class="absolute inset-0" style="background:<%= color_hex %>"></div>
    <% elsif bg_url %>
      <img src="<%= bg_url %>" alt="Background" class="absolute inset-0 w-full h-full object-cover object-center opacity-60">
    <% end %>
    <div class="absolute inset-0 bg-gradient-to-b from-black/10 via-black/20 to-black/40"></div>
  </div>

  <div class="absolute left-12 top-[240px] -translate-y-14 transform z-40">
    <div class="w-44 h-44 rounded-full p-1.5 bg-gradient-to-r from-sky-500 via-indigo-500 to-cyan-500 shadow-[0_10px_40px_rgba(59,130,246,0.45)]">
      <div class="w-full h-full rounded-full overflow-hidden bg-gray-800">
        <% if @profile.avatar_url.present? %>
          <img src="<%= @profile.avatar_url %>" alt="<%= @profile.display_name %> avatar" class="w-full h-full object-cover object-center">
        <% else %>
          <div class="w-full h-full bg-gray-700 flex items-center justify-center text-gray-400">?</div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="relative row-start-2 h-[360px] z-30 px-12 pb-4 pt-6 overflow-hidden border-t border-gray-800 bg-gray-900">
    <div class="h-full flex flex-col justify-between">
      <div class="pl-[200px] pr-8">
        <% name = @profile.display_name %>
        <% handle = @profile.login %>
        <% name_size = name.to_s.length > 26 ? "text-4xl" : name.to_s.length > 18 ? "text-5xl" : "text-6xl" %>
        <div class="flex items-center gap-4 leading-none">
          <h1 class="<%= name_size %> font-bold text-white tracking-wide drop-shadow-sm truncate"><%= name %></h1>
          <span class="text-2xl font-medium text-sky-400">@<%= handle %></span>
        </div>

        <div class="mt-2 flex items-center gap-2 text-gray-200 whitespace-nowrap overflow-hidden leading-none">
          <div class="px-3 py-1.5 bg-gray-800/70 border border-gray-700 rounded-full shadow-md min-w-0">
            <span class="font-medium truncate max-w-[280px] align-middle">github.com/<%= handle %></span>
          </div>
          <% if @profile.location.present? %>
            <div class="px-3 py-1.5 bg-gray-800/70 border border-gray-700 rounded-full shadow-md min-w-0">
              <span class="font-medium truncate max-w-[200px] align-middle"><%= @profile.location %></span>
            </div>
          <% end %>
          <div class="px-3 py-1.5 bg-gray-800/70 border border-gray-700 rounded-full shadow-md min-w-0">
            <span class="font-medium"><%= @profile.followers.to_i %> followers</span>
          </div>
        </div>

        <% card = @profile.profile_card %>
        <% short_bio = card&.short_bio.presence || @profile.bio %>
        <% if short_bio.present? %>
          <p class="mt-3 text-gray-200 text-lg leading-relaxed line-clamp-2"><%= short_bio %></p>
        <% end %>

        <% if card %>
          <div class="mt-3 flex flex-wrap items-center gap-2 text-sm">
            <% if card.attack.present? %>
              <span class="px-2.5 py-1 rounded bg-gray-800/80 border border-gray-700 text-amber-300 font-semibold">Attack: <%= card.attack %></span>
            <% end %>
            <% if card.defense.present? %>
              <span class="px-2.5 py-1 rounded bg-gray-800/80 border border-gray-700 text-blue-300 font-semibold">Defense: <%= card.defense %></span>
            <% end %>
            <% if card.speed.present? %>
              <span class="px-2.5 py-1 rounded bg-gray-800/80 border border-gray-700 text-green-300 font-semibold">Speed: <%= card.speed %></span>
            <% end %>
            <% if card.playing_card.present? %>
              <span class="px-2.5 py-1 rounded bg-gray-800/80 border border-gray-700 text-sky-300 font-medium"><%= card.playing_card %></span>
            <% end %>
            <% if card.spirit_animal.present? %>
              <span class="px-2.5 py-1 rounded bg-gray-800/80 border border-gray-700 text-sky-300 font-medium"><%= card.spirit_animal %></span>
            <% end %>
            <% if card.archetype.present? %>
              <span class="px-2.5 py-1 rounded bg-gray-800/80 border border-gray-700 text-sky-300 font-medium"><%= card.archetype %></span>
            <% end %>
          </div>
        <% end %>
      </div>

      <% followers = @profile.followers.to_i %>
      <% stars = Array(@profile.top_repositories).sum { |r| r.stargazers_count.to_i } %>
      <% events = @profile.profile_activity&.total_events.to_i %>
      <% # Normalize into 0-100 bands for bar widths %>
      <% followers_pct = [[(followers / 5000.0 * 100).round, 0].max, 100].min %>
      <% stars_pct = [[(stars / 2000.0 * 100).round, 0].max, 100].min %>
      <% activity_pct = [[(events / 200.0 * 100).round, 0].max, 100].min %>
      <div class="mt-2 pl-[200px] pr-8">
        <div class="grid grid-cols-3 gap-6 max-w-[760px] mx-auto w-full">
          <div class="space-y-2">
            <div class="flex items-center justify-between text-sm text-gray-300">
              <span class="flex items-center gap-2">Followers</span>
              <span class="font-semibold text-yellow-300"><%= followers %></span>
            </div>
            <div class="h-2.5 w-full bg-gray-800 rounded-full overflow-hidden border border-gray-700">
              <div class="h-full bg-gradient-to-r from-yellow-500 to-amber-400" style="width: <%= followers_pct %>%"></div>
            </div>
          </div>
          <div class="space-y-2">
            <div class="flex items-center justify-between text-sm text-gray-300">
              <span class="flex items-center gap-2">Stars (Top Repos)</span>
              <span class="font-semibold text-blue-300"><%= stars %></span>
            </div>
            <div class="h-2.5 w-full bg-gray-800 rounded-full overflow-hidden border border-gray-700">
              <div class="h-full bg-gradient-to-r from-blue-500 to-cyan-400" style="width: <%= stars_pct %>%"></div>
            </div>
          </div>
          <div class="space-y-2">
            <div class="flex items-center justify-between text-sm text-gray-300">
              <span class="flex items-center gap-2">Activity (90d)</span>
              <span class="font-semibold text-green-300"><%= events %></span>
            </div>
            <div class="h-2.5 w-full bg-gray-800 rounded-full overflow-hidden border border-gray-700">
              <div class="h-full bg-gradient-to-r from-emerald-500 to-green-400" style="width: <%= activity_pct %>%"></div>
            </div>
          </div>
        </div>

        <div class="mt-2 pr-4 flex items-center justify-end text-gray-400">
          <div class="px-2.5 py-1 bg-gray-800/80 border border-gray-700 rounded-full flex items-center gap-1.5 shadow-md">
            <span class="text-xs font-semibold tracking-wide">TecHub</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
