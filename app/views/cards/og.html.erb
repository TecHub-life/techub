<% gen_dir = Rails.root.join('public','generated', @profile.login) %>
<% card_prefs = @profile.profile_card %>
<% choice = card_prefs&.bg_choice_og || 'ai' %>
<% color_hex = (card_prefs&.bg_color_og || '#0f172a') %>

<% asset_bg16 = @profile.profile_assets.find_by(kind: 'avatar_16x9') %>
<% asset_card = @profile.profile_assets.find_by(kind: 'card') %>
<% bg_url = nil %>
<% if choice == 'ai' %>
  <% if asset_bg16&.public_url.present? %>
    <% bg_url = asset_bg16.public_url %>
  <% elsif asset_card&.public_url.present? %>
    <% bg_url = asset_card.public_url %>
  <% elsif Dir.exist?(gen_dir) %>
    <% file = Dir[gen_dir.join('avatar-16x9*.jpg').to_s].first || Dir[gen_dir.join('avatar-16x9*.png').to_s].first || Dir[gen_dir.join('card-bg-16x9*.jpg').to_s].first || Dir[gen_dir.join('card-bg-16x9*.png').to_s].first %>
    <% bg_url = "/generated/#{@profile.login}/#{File.basename(file)}" if file %>
  <% end %>
<% elsif choice == 'default' %>
  <% bg_url = '/default-card.jpg' %>
<% end %>
<div class="w-[1200px] h-[630px] bg-gray-900 overflow-hidden relative flex flex-col">
  <% if choice == 'color' %>
    <div class="absolute inset-0" style="background:<%= color_hex %>"></div>
  <% elsif bg_url %>
    <img src="<%= bg_url %>" alt="Background" class="absolute inset-0 w-full h-full object-cover object-center opacity-30 pointer-events-none">
  <% end %>
  <div class="absolute inset-0 bg-gradient-to-b from-gray-900/55 to-gray-900/85"></div>

  <div class="relative z-10 flex-1 flex items-center justify-center px-12 py-8">
    <div class="w-full max-w-6xl grid grid-cols-[1fr_auto] items-center gap-12">
      <div class="space-y-4 min-w-0">
        <div class="space-y-1">
          <% name = @profile.display_name %>
          <% handle = @profile.login %>
          <% name_size = name.to_s.length > 25 ? "text-3xl" : name.to_s.length > 18 ? "text-4xl" : "text-5xl" %>
          <% handle_size = handle.to_s.length > 20 ? "text-base" : "text-xl" %>
          <h1 class="<%= name_size %> font-bold text-white tracking-wide drop-shadow-sm leading-tight"><%= name %></h1>
          <p class="<%= handle_size %> font-medium text-sky-400">@<%= handle %></p>
        </div>

        <div class="flex gap-3 text-gray-300 text-base flex-wrap">
          <% if @profile.location.present? %>
            <span class="px-3 py-1.5 rounded-full bg-gray-800/70 border border-gray-700/70">üìç <%= @profile.location %></span>
          <% end %>
          <% followers = @profile.followers.to_i %>
          <% stars = Array(@profile.top_repositories).sum { |r| r.stargazers_count.to_i } %>
          <% orgs = @profile.profile_organizations.size %>
          <% repos = @profile.public_repos.to_i %>
          <span class="px-3 py-1.5 rounded-full bg-gray-800/70 border border-gray-700/70">‚≠ê <%= stars %> stars</span>
          <span class="px-3 py-1.5 rounded-full bg-gray-800/70 border border-gray-700/70">üë• <%= followers %> followers</span>
          <span class="px-3 py-1.5 rounded-full bg-gray-800/70 border border-gray-700/70">üè¢ <%= orgs %> orgs</span>
          <span class="px-3 py-1.5 rounded-full bg-gray-800/70 border border-gray-700/70">üì¶ <%= repos %> repos</span>
        </div>

        <% langs = @profile.top_languages(5).map(&:name) %>
        <% if langs.any? %>
          <div class="flex flex-wrap gap-3 py-2">
            <% langs.each do |lang| %>
              <span class="bg-gray-800/80 text-base font-medium text-sky-300 px-4 py-2 rounded-full border border-gray-700/50">#<%= lang %></span>
            <% end %>
          </div>
        <% end %>

        <% card = @profile.profile_card %>
        <% if card %>
          <div class="flex flex-wrap gap-3 py-1">
            <% if card.attack.present? %>
              <span class="px-3 py-1.5 rounded-full bg-gray-800/80 border border-gray-700/70 text-amber-300 font-semibold">ATK <%= card.attack %></span>
            <% end %>
            <% if card.defense.present? %>
              <span class="px-3 py-1.5 rounded-full bg-gray-800/80 border border-gray-700/70 text-blue-300 font-semibold">DEF <%= card.defense %></span>
            <% end %>
            <% if card.speed.present? %>
              <span class="px-3 py-1.5 rounded-full bg-gray-800/80 border border-gray-700/70 text-green-300 font-semibold">SPD <%= card.speed %></span>
            <% end %>
            <% if card.playing_card.present? %>
              <span class="px-3 py-1.5 rounded-full bg-gray-800/80 border border-gray-700/70 text-sky-300 font-medium"><%= card.playing_card %></span>
            <% end %>
            <% if card.spirit_animal.present? %>
              <span class="px-3 py-1.5 rounded-full bg-gray-800/80 border border-gray-700/70 text-sky-300 font-medium"><%= card.spirit_animal %></span>
            <% end %>
            <% if card.archetype.present? %>
              <span class="px-3 py-1.5 rounded-full bg-gray-800/80 border border-gray-700/70 text-sky-300 font-medium"><%= card.archetype %></span>
            <% end %>
          </div>
        <% end %>

        <%# No bio on OG image for clarity %>
      </div>

      <div class="flex-shrink-0">
        <div class="w-72 h-72 rounded-full p-1 bg-gradient-to-r from-sky-500 to-indigo-500 shadow-2xl">
          <div class="w-full h-full rounded-full overflow-hidden bg-gray-800">
            <% if @profile.avatar_url.present? %>
              <img src="<%= @profile.avatar_url %>" alt="<%= @profile.display_name %> avatar" class="w-full h-full object-cover object-center">
            <% else %>
              <div class="w-full h-full bg-gray-700 flex items-center justify-center text-gray-400">?</div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <p class="relative z-10 text-center pb-4 text-base font-semibold text-gray-400 tracking-wide">
    techub.life
  </p>
</div>
