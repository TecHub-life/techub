<% gen_dir = Rails.root.join('public','generated', @profile.login) %>
<% card_prefs = @profile.profile_card %>
<% choice = card_prefs&.bg_choice_og || 'default' %>
<% color_hex = (card_prefs&.bg_color_og || '#0f172a') %>

<% asset_bg16 = @profile.profile_assets.find_by(kind: 'avatar_16x9') %>
<% asset_card = @profile.profile_assets.find_by(kind: 'card') %>
<% bg_url = nil %>
<% if choice == 'ai' %>
  <% if asset_bg16&.public_url.present? %>
    <% bg_url = asset_bg16.public_url %>
  <% elsif asset_card&.public_url.present? %>
    <% bg_url = asset_card.public_url %>
  <% elsif Dir.exist?(gen_dir) %>
    <% file = Dir[gen_dir.join('avatar-16x9*.jpg').to_s].first || Dir[gen_dir.join('avatar-16x9*.png').to_s].first || Dir[gen_dir.join('card-bg-16x9*.jpg').to_s].first || Dir[gen_dir.join('card-bg-16x9*.png').to_s].first %>
    <% bg_url = "/generated/#{@profile.login}/#{File.basename(file)}" if file %>
  <% end %>
  <% if bg_url.nil? %>
    <% bg_url = supporting_art_url_for(login: @profile.login, aspect: :og) %>
  <% end %>
<% elsif choice == 'default' %>
  <% bg_url = supporting_art_url_for(login: @profile.login, aspect: :og) %>
<% end %>
<div class="w-[1200px] h-[630px] bg-gray-900 overflow-hidden relative flex flex-col">
  <% if choice == 'color' %>
    <div class="absolute inset-0" style="background:<%= color_hex %>"></div>
  <% elsif bg_url %>
    <% fx = (@profile.profile_card&.bg_fx_og || 0.5) %>
    <% fy = (@profile.profile_card&.bg_fy_og || 0.5) %>
    <% zoom = (@profile.profile_card&.bg_zoom_og || 1.0) %>
    <img src="<%= bg_url %>" alt="Background" class="absolute inset-0 w-full h-full object-cover opacity-28 pointer-events-none" style="<%= bg_style_from(fx: fx, fy: fy, zoom: zoom) %>">
  <% end %>
  <div class="absolute inset-0 bg-gradient-to-b from-gray-900/55 to-gray-900/85"></div>

  <div class="relative z-10 flex-1 flex items-center justify-center px-12 py-8">
    <div class="w-full max-w-6xl grid grid-cols-[1fr_auto] items-center gap-6">
      <div class="space-y-4 min-w-0">
        <div class="space-y-1">
          <% name = @profile.display_name %>
          <% handle = @profile.login %>
          <% name_size = name.to_s.length > 25 ? "text-3xl" : name.to_s.length > 18 ? "text-4xl" : "text-5xl" %>
          <% handle_size = handle.to_s.length > 20 ? "text-base" : "text-xl" %>
          <h1 class="<%= name_size %> font-bold text-white tracking-wide drop-shadow-sm leading-tight"><%= name %></h1>
          <p class="<%= handle_size %> font-medium text-sky-400">@<%= handle %></p>
        </div>

        <%# One-line tagline/short bio for OG (quoted) %>
        <% card = @profile.profile_card %>
        <% og_tagline = card&.flavor_text.presence || card&.short_bio.presence %>
        <% if og_tagline.present? %>
          <p class="text-gray-200 text-base leading-tight line-clamp-1">"<%= og_tagline %>"</p>
        <% end %>

        <div class="flex gap-3 text-gray-300 text-base flex-wrap">
          <% followers = @profile.followers.to_i %>
          <% stars = Array(@profile.top_repositories).sum { |r| r.stargazers_count.to_i } %>
          <% # Prefer personal URL; else GitHub URL. Keep to two chips to avoid wrapping. %>
          <% if @profile.blog.present? %>
            <% nice_url = @profile.blog.to_s.gsub(%r{https?://}, '').gsub(/^www\./, '') %>
            <span class="px-3 py-1.5 rounded-full bg-gray-800/70 border border-gray-700/70">üîó <%= nice_url %></span>
          <% else %>
            <span class="px-3 py-1.5 rounded-full bg-gray-800/70 border border-gray-700/70">github.com/<%= handle %></span>
          <% end %>
          <span class="px-3 py-1.5 rounded-full bg-gray-800/70 border border-gray-700/70">‚≠ê <%= stars %> ‚Ä¢ üë• <%= followers %></span>
        </div>

        <%# Languages removed from OG to reduce duplication and save space %>

        <% # Notable repositories ‚Äî show name + small star count; styled distinct from other chips %>
        <% repos = Array(@profile.top_repositories).first(3).map { |r| [r.name.to_s, r.stargazers_count.to_i] } %>
        <% if repos.any? %>
          <div class="-mt-1 mb-1 flex flex-wrap items-center gap-2">
            <% repos.each do |(rn, stars)| %>
              <span class="px-3 py-1.5 rounded-full bg-teal-900/40 border border-teal-700 text-teal-200 max-w-[260px] truncate">
                <%= rn %>
                <% if stars > 0 %>
                  <span class="ml-1 text-xs text-amber-300">‚òÖ <%= stars %></span>
                <% end %>
              </span>
            <% end %>
          </div>
        <% end %>

        <% if card %>
          <div class="flex flex-wrap gap-3 py-1">
            <% if card.attack.present? %>
              <span class="px-3 py-1.5 rounded-full bg-gray-800/80 border border-gray-700/70 text-amber-300 font-semibold">ATK <%= card.attack %></span>
            <% end %>
            <% if card.defense.present? %>
              <span class="px-3 py-1.5 rounded-full bg-gray-800/80 border border-gray-700/70 text-blue-300 font-semibold">DEF <%= card.defense %></span>
            <% end %>
            <% if card.speed.present? %>
              <span class="px-3 py-1.5 rounded-full bg-gray-800/80 border border-gray-700/70 text-green-300 font-semibold">SPD <%= card.speed %></span>
            <% end %>
            <%# playing_card chip removed; shown via corner markers instead %>
            <% if card.spirit_animal.present? %>
              <span class="px-3 py-1.5 rounded-full bg-emerald-900/40 border border-emerald-700/70 text-emerald-200 font-semibold">üêæ <%= card.spirit_animal %></span>
            <% end %>
            <% if card.archetype.present? %>
              <span class="px-3 py-1.5 rounded-full bg-emerald-900/40 border border-emerald-700/70 text-emerald-200 font-semibold">‚ö° <%= card.archetype %></span>
            <% end %>
          </div>
          <% if Array(card.tags).any? %>
            <div class="flex flex-wrap gap-2 py-1">
              <% Array(card.tags).first(6).each do |t| %>
                <span class="px-3 py-1.5 rounded-full bg-gray-800/80 border border-gray-700/70 text-indigo-300 font-medium">#<%= t.to_s.downcase %></span>
              <% end %>
            </div>
          <% end %>
        <% end %>

        <%# Corner playing card markers (use full text, e.g., "Ace of ‚ô£") %>
        <% if card && card.playing_card.present? %>
          <div class="absolute top-3 right-4 text-white/80 text-base font-semibold select-none whitespace-nowrap"><%= card.playing_card %></div>
          <div class="absolute bottom-3 left-4 text-white/80 text-base font-semibold select-none whitespace-nowrap"><%= card.playing_card %></div>
        <% end %>

        <%# No bio on OG image for clarity %>
      </div>

      <div class="flex-shrink-0 -ml-8">
        <div class="w-80 h-80 rounded-full p-1.5 bg-gradient-to-r from-sky-500 via-cyan-500 to-emerald-500 shadow-2xl">
          <div class="w-full h-full rounded-full overflow-hidden bg-gray-800">
            <% avatar_choice = @profile.profile_card&.avatar_choice || 'real' %>
            <% ai_avatar = @profile.profile_assets.find_by(kind: 'avatar_1x1') %>
            <% avatar_src = (avatar_choice == 'ai' && ai_avatar&.public_url.present?) ? ai_avatar.public_url : @profile.avatar_url %>
            <% if avatar_src.present? %>
              <img src="<%= avatar_src %>" alt="<%= @profile.display_name %> avatar" class="w-full h-full object-cover object-center">
            <% else %>
              <div class="w-full h-full bg-gray-700 flex items-center justify-center text-gray-400">?</div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <p class="relative z-10 text-center pb-4 text-base font-semibold text-gray-400 tracking-wide">
    techub.life
  </p>
</div>
