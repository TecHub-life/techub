<% card_prefs = @profile.profile_card %>
<% choice = card_prefs&.bg_choice_simple || 'ai' %>
<% color_hex = (card_prefs&.bg_color_simple || '#0f172a') %>

<% gen_dir = Rails.root.join('public','generated', @profile.login) %>
<% asset_bg16 = @profile.profile_assets.find_by(kind: 'avatar_16x9') %>
<% asset_card = @profile.profile_assets.find_by(kind: 'card') %>
<% bg_url = nil %>
<% if choice == 'ai' %>
  <% if asset_bg16&.public_url.present? %>
    <% bg_url = asset_bg16.public_url %>
  <% elsif asset_card&.public_url.present? %>
    <% bg_url = asset_card.public_url %>
  <% elsif Dir.exist?(gen_dir) %>
    <% file = Dir[gen_dir.join('avatar-16x9*.jpg').to_s].first || Dir[gen_dir.join('avatar-16x9*.png').to_s].first || Dir[gen_dir.join('card-bg-16x9*.jpg').to_s].first || Dir[gen_dir.join('card-bg-16x9*.png').to_s].first %>
    <% bg_url = "/generated/#{@profile.login}/#{File.basename(file)}" if file %>
  <% end %>
<% elsif choice == 'default' %>
  <% bg_url = '/default-card.jpg' %>
<% end %>


<div class="w-[1280px] h-[720px] overflow-hidden relative flex items-center justify-center" style="background:<%= choice == 'color' ? color_hex : '#0b1220' %>">
  <% if choice != 'color' && bg_url %>
    <img src="<%= bg_url %>" alt="Background" class="absolute inset-0 w-full h-full object-cover object-center opacity-25">
  <% end %>
  <div class="text-center space-y-4">
    <div class="mx-auto w-40 h-40 rounded-full overflow-hidden bg-gray-800">
      <% if @profile.avatar_url.present? %>
        <img src="<%= @profile.avatar_url %>" alt="<%= @profile.display_name %> avatar" class="w-full h-full object-cover">
      <% else %>
        <div class="w-full h-full bg-gray-700 flex items-center justify-center text-gray-400">?</div>
      <% end %>
    </div>
    <h1 class="text-5xl font-bold text-white"><%= @profile.display_name %></h1>
    <p class="text-xl text-sky-400">@<%= @profile.login %></p>
    <% langs = @profile.top_languages(4).map(&:name) %>
    <% if langs.any? %>
      <div class="flex items-center justify-center gap-2 flex-wrap">
        <% langs.each do |lang| %>
          <span class="text-sm px-3 py-1 rounded-full bg-gray-800/80 border border-gray-700 text-sky-300">#<%= lang %></span>
        <% end %>
      </div>
    <% end %>
    <% card = @profile.profile_card %>
    <% if card %>
      <div class="flex items-center justify-center gap-2 flex-wrap mt-2">
        <% if card.attack.present? %>
          <span class="text-sm px-2.5 py-1 rounded bg-gray-800/80 border border-gray-700 text-amber-300 font-semibold">ATK <%= card.attack %></span>
        <% end %>
        <% if card.defense.present? %>
          <span class="text-sm px-2.5 py-1 rounded bg-gray-800/80 border border-gray-700 text-blue-300 font-semibold">DEF <%= card.defense %></span>
        <% end %>
        <% if card.speed.present? %>
          <span class="text-sm px-2.5 py-1 rounded bg-gray-800/80 border border-gray-700 text-green-300 font-semibold">SPD <%= card.speed %></span>
        <% end %>
      </div>
      <div class="flex items-center justify-center gap-2 flex-wrap mt-2">
        <% if card.playing_card.present? %>
          <span class="text-sm px-2.5 py-1 rounded bg-gray-800/80 border border-gray-700 text-sky-300 font-medium"><%= card.playing_card %></span>
        <% end %>
        <% if card.spirit_animal.present? %>
          <span class="text-sm px-2.5 py-1 rounded bg-gray-800/80 border border-gray-700 text-sky-300 font-medium">üêæ <%= card.spirit_animal %></span>
        <% end %>
        <% if card.archetype.present? %>
          <span class="text-sm px-2.5 py-1 rounded bg-gray-800/80 border border-gray-700 text-sky-300 font-medium">‚ö° <%= card.archetype %></span>
        <% end %>
      </div>
      <% if Array(card.tags).any? %>
        <div class="flex items-center justify-center gap-2 flex-nowrap mt-3">
          <% Array(card.tags).first(6).each do |t| %>
            <span class="text-sm px-3 py-1 rounded-full bg-gray-800/80 border border-gray-700 text-indigo-200">#<%= t.to_s.downcase %></span>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <% followers = @profile.followers.to_i %>
      <p class="text-gray-300">‚≠ê <%= followers %> followers</p>
    <% end %>
  </div>
</div>
