<%# 2560x1440 — YouTube channel art. Include 1546×423 safe area box centered for mobile/web.
    Composition: background image softened, centered identity within safe area, avoid text outside. %>
<div class="relative w-[2560px] h-[1440px] overflow-hidden bg-slate-900">
<% bg_url = supporting_art_url_for(profile: @profile, aspect: :og) %>
  <img src="<%= bg_url %>" alt="background" class="absolute inset-0 h-full w-full object-cover opacity-30">
  <div class="absolute inset-0 bg-gradient-to-b from-black/35 via-black/25 to-black/45"></div>

  <%# Safe area overlay container (centered) %>
  <div class="absolute inset-0 flex items-center justify-center">
    <div class="relative flex items-center justify-center gap-12" style="width:1546px; height:423px;">
      
      <%# Avatar (Left) %>
      <div class="flex-shrink-0">
        <div class="w-48 h-48 rounded-full p-2 bg-gradient-to-tr from-indigo-500 via-sky-500 to-emerald-500 shadow-2xl">
          <div class="w-full h-full rounded-full overflow-hidden bg-gray-900">
            <img src="<%= avatar_image_url_for(@profile, variant: :og) %>" alt="avatar" class="w-full h-full object-cover object-center" onerror="this.onerror=null; this.src='<%= asset_path("android-chrome-512x512.jpg") %>'">
          </div>
        </div>
      </div>

      <%# Content (Right/Center) %>
      <div class="max-w-[700px] text-center md:text-left">
        <h1 class="text-6xl font-black text-white tracking-tight drop-shadow-lg mb-2"><%= @profile.display_name %></h1>
        <p class="text-3xl font-bold text-sky-400 mb-4">@<%= @profile.login %></p>
        
        <% card = @profile.profile_card %>
        <% if (tag = card&.tagline.presence || card&.flavor_text.presence || card&.short_bio.presence).present? %>
          <p class="text-2xl font-medium text-slate-200 leading-snug drop-shadow-md"><%= tag %></p>
        <% end %>

        <%# Social / Vibe Check %>
        <div class="mt-6 flex flex-wrap items-center gap-4 justify-center md:justify-start">
           <% if card&.archetype.present? %>
             <span class="px-4 py-1.5 rounded-full bg-white/10 border border-white/20 text-white font-semibold backdrop-blur-sm">
               ⚡ <%= card.archetype %>
             </span>
           <% end %>
           <div class="flex items-center gap-2 bg-black/40 backdrop-blur-md px-3 py-1.5 rounded-full border border-white/10">
              <span class="text-xs font-bold text-slate-300 tracking-widest uppercase">techub.life</span>
           </div>
        </div>
      </div>

    </div>
  </div>
</div>
