<%# 2560x1440 — YouTube channel art. Include 1546×423 safe area box centered for mobile/web.
    Composition: background image softened, centered identity within safe area, avoid text outside. %>
<div class="relative w-[2560px] h-[1440px] overflow-hidden bg-slate-900">
  <% bg_url = supporting_art_url_for(login: @profile.login, aspect: :og) %>
  <img src="<%= bg_url %>" alt="background" class="absolute inset-0 h-full w-full object-cover opacity-30">
  <div class="absolute inset-0 bg-gradient-to-b from-black/35 via-black/25 to-black/45"></div>

  <%# Safe area overlay container (centered) %>
  <div class="absolute inset-0 flex items-center justify-center">
    <div class="relative" style="width:1546px; height:423px;">
      <%# Optional developer overlay (commented): border shows safe area
      <div class='absolute inset-0 border-2 border-yellow-400/80 pointer-events-none'></div>
      %>
      <div class="absolute inset-0 flex items-center justify-between px-8">
        <div class="min-w-0 max-w-[68%]">
          <% name = @profile.display_name %>
          <% handle = @profile.login %>
          <div class="text-white">
            <div class="text-5xl font-extrabold leading-tight drop-shadow-sm truncate"><%= name %></div>
            <div class="mt-1 text-2xl font-semibold text-sky-300 truncate">@<%= handle %></div>
          </div>
          <% card = @profile.profile_card %>
          <% if (tag = card&.tagline.presence || card&.flavor_text.presence || card&.short_bio.presence).present? %>
            <div class="mt-3 text-xl text-slate-200 line-clamp-2"><%= tag %></div>
          <% end %>
        </div>
        <div class="flex-shrink-0">
          <div class="w-28 h-28 rounded-full p-1.5 bg-gradient-to-r from-sky-500 via-cyan-500 to-emerald-500 shadow-xl">
            <div class="w-full h-full rounded-full overflow-hidden bg-gray-800">
              <img src="<%= avatar_image_url_for(@profile) %>" alt="avatar" class="w-full h-full object-cover object-center">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


