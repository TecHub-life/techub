<section class="mx-auto max-w-6xl space-y-6 px-4 py-12">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-red-600 via-orange-500 to-yellow-500 bg-clip-text text-transparent dark:from-red-400 dark:via-orange-400 dark:to-yellow-400">
        Battle Arena
      </h1>
      <p class="mt-2 text-slate-600 dark:text-slate-400">
        Watch epic battles between GitHub developer cards
      </p>
    </div>
    <% if current_user %>
      <%= link_to new_battle_path, class: "inline-flex items-center gap-2 rounded-lg bg-gradient-to-r from-red-600 to-orange-600 px-6 py-3 text-white font-semibold hover:from-red-700 hover:to-orange-700 transition-all shadow-lg hover:shadow-xl" do %>
        <i class="fa-solid fa-swords"></i>
        <span>Start Battle</span>
      <% end %>
    <% end %>
  </div>

  <!-- Battle Stats -->
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
    <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-900">
      <div class="flex items-center gap-3">
        <div class="rounded-lg bg-emerald-100 p-3 dark:bg-emerald-900/30">
          <i class="fa-solid fa-trophy text-2xl text-emerald-600 dark:text-emerald-400"></i>
        </div>
        <div>
          <div class="text-2xl font-bold text-slate-900 dark:text-slate-100"><%= Battle.completed.count %></div>
          <div class="text-sm text-slate-600 dark:text-slate-400">Total Battles</div>
        </div>
      </div>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-900">
      <div class="flex items-center gap-3">
        <div class="rounded-lg bg-blue-100 p-3 dark:bg-blue-900/30">
          <i class="fa-solid fa-users text-2xl text-blue-600 dark:text-blue-400"></i>
        </div>
        <div>
          <div class="text-2xl font-bold text-slate-900 dark:text-slate-100"><%= Profile.joins(:profile_card).count %></div>
          <div class="text-sm text-slate-600 dark:text-slate-400">Battle-Ready Cards</div>
        </div>
      </div>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-900">
      <div class="flex items-center gap-3">
        <div class="rounded-lg bg-purple-100 p-3 dark:bg-purple-900/30">
          <i class="fa-solid fa-clock text-2xl text-purple-600 dark:text-purple-400"></i>
        </div>
        <div>
          <div class="text-2xl font-bold text-slate-900 dark:text-slate-100"><%= Battle.where("created_at > ?", 24.hours.ago).count %></div>
          <div class="text-sm text-slate-600 dark:text-slate-400">Last 24 Hours</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Battles -->
  <div class="rounded-xl border border-slate-200 bg-white shadow-sm dark:border-slate-700 dark:bg-slate-900">
    <div class="border-b border-slate-200 p-6 dark:border-slate-700">
      <h2 class="text-xl font-bold text-slate-900 dark:text-slate-100">Recent Battles</h2>
    </div>

    <div class="divide-y divide-slate-200 dark:divide-slate-700">
      <% if @battles.any? %>
        <% @battles.each do |battle| %>
          <%= link_to battle_path(battle), class: "block p-6 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors" do %>
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
              <!-- Battle Participants -->
              <div class="flex items-center gap-4 flex-1">
                <!-- Challenger -->
                <div class="flex items-center gap-3 flex-1">
                  <% if battle.challenger.avatar_url.present? %>
                    <%= image_tag battle.challenger.avatar_url, class: "h-12 w-12 rounded-full ring-2 ring-blue-500", alt: battle.challenger.login %>
                  <% end %>
                  <div class="flex-1">
                    <div class="font-semibold text-slate-900 dark:text-slate-100">
                      @<%= battle.challenger.login %>
                    </div>
                    <div class="text-sm text-slate-600 dark:text-slate-400">
                      <%= battle.challenger.profile_card.archetype %>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="text-sm font-mono text-slate-600 dark:text-slate-400">HP</div>
                    <div class="font-bold <%= battle.winner_profile_id == battle.challenger_profile_id ? 'text-emerald-600 dark:text-emerald-400' : 'text-red-600 dark:text-red-400' %>">
                      <%= battle.challenger_hp %>
                    </div>
                  </div>
                </div>

                <!-- VS Badge -->
                <div class="flex-shrink-0">
                  <div class="rounded-full bg-gradient-to-r from-red-500 to-orange-500 px-4 py-2 text-white font-bold text-sm shadow-lg">
                    VS
                  </div>
                </div>

                <!-- Opponent -->
                <div class="flex items-center gap-3 flex-1">
                  <div class="text-left">
                    <div class="text-sm font-mono text-slate-600 dark:text-slate-400">HP</div>
                    <div class="font-bold <%= battle.winner_profile_id == battle.opponent_profile_id ? 'text-emerald-600 dark:text-emerald-400' : 'text-red-600 dark:text-red-400' %>">
                      <%= battle.opponent_hp %>
                    </div>
                  </div>
                  <div class="flex-1">
                    <div class="font-semibold text-slate-900 dark:text-slate-100">
                      @<%= battle.opponent.login %>
                    </div>
                    <div class="text-sm text-slate-600 dark:text-slate-400">
                      <%= battle.opponent.profile_card.archetype %>
                    </div>
                  </div>
                  <% if battle.opponent.avatar_url.present? %>
                    <%= image_tag battle.opponent.avatar_url, class: "h-12 w-12 rounded-full ring-2 ring-red-500", alt: battle.opponent.login %>
                  <% end %>
                </div>
              </div>

              <!-- Winner Badge -->
              <div class="flex items-center gap-3">
                <div class="text-right">
                  <div class="text-xs text-slate-500 dark:text-slate-400">
                    <%= time_ago_in_words(battle.created_at) %> ago
                  </div>
                  <div class="flex items-center gap-2 mt-1">
                    <i class="fa-solid fa-crown text-yellow-500"></i>
                    <span class="font-semibold text-slate-900 dark:text-slate-100">
                      @<%= battle.winner.login %>
                    </span>
                  </div>
                </div>
                <i class="fa-solid fa-chevron-right text-slate-400"></i>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="p-12 text-center">
          <i class="fa-solid fa-swords text-6xl text-slate-300 dark:text-slate-700 mb-4"></i>
          <p class="text-slate-600 dark:text-slate-400">No battles yet. Be the first to start one!</p>
          <% if current_user %>
            <%= link_to new_battle_path, class: "mt-4 inline-flex items-center gap-2 rounded-lg bg-gradient-to-r from-red-600 to-orange-600 px-6 py-3 text-white font-semibold hover:from-red-700 hover:to-orange-700 transition-all" do %>
              <i class="fa-solid fa-swords"></i>
              <span>Start First Battle</span>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

</section>
