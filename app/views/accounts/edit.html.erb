<section class="mx-auto max-w-2xl px-4 py-12">
  <h1 class="text-2xl font-bold text-slate-900 dark:text-slate-100 mb-6">Account Settings</h1>
  <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-800">
    <%= form_with model: @user, url: account_path, method: :patch, local: true do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium" %>
        <%= f.email_field :email, class: "mt-1 w-full rounded border border-slate-300 bg-white p-2 text-slate-900 dark:border-slate-600 dark:bg-slate-900 dark:text-slate-100" %>
        <p class="mt-1 text-xs text-slate-500">We send notifications here.</p>
      </div>
      <div class="mb-6 flex items-center gap-2">
        <%= f.check_box :notify_on_pipeline %>
        <%= f.label :notify_on_pipeline, "Email me when my card is ready or fails" %>
      </div>
      <%= f.submit "Save", class: "rounded bg-slate-900 px-4 py-2 text-white dark:bg-slate-100 dark:text-slate-900" %>
    <% end %>
  </div>
</section>

